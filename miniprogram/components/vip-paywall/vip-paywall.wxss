.vip-paywall {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
  pointer-events: none;
}

.vip-paywall .paywall-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  pointer-events: auto;
}

.vip-paywall .paywall-sheet {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 75vh;
  background: linear-gradient(180deg, #1A1A2E 0%, #16213E 100%);
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  pointer-events: auto;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.vip-paywall .paywall-sheet.is-open {
  transform: translateY(0);
}

.paywall-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.paywall-icon {
  display: block;
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.paywall-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #FFF8E8;
  line-height: 1.4;
}

.paywall-bullets {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.paywall-bullet {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.88);
  line-height: 1.5;
}

.paywall-actions {
  margin-bottom: 24rpx;
}

.paywall-price {
  margin-bottom: 24rpx;
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 16rpx;
}

.paywall-price-old {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
  text-decoration: line-through;
}

.paywall-price-now {
  font-size: 36rpx;
  font-weight: 700;
  color: #D9A62E;
}

.paywall-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.paywall-btn-primary {
  background: #E84A27;
  color: #FFFFFF;
}

.paywall-btn-primary:active {
  opacity: 0.9;
}

.paywall-btn-loading {
  opacity: 0.85;
}

.paywall-btn-disabled {
  background: #E0E0E0;
  color: #9E9E9E;
}

.paywall-ios-label {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 24rpx;
}

.paywall-footer {
  text-align: center;
}

.paywall-close {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  padding: 16rpx;
}
