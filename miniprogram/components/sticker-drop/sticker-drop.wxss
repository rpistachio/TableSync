/* ====== 贴纸飘落动画 ====== */

/* 可交互的透明浮层（不阻断页面，仅在贴纸附近可点击） */
.sticker-float-area {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: none;
}

/* ====== 贴纸叶片 ====== */

.sticker-leaf {
  position: absolute;
  right: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  pointer-events: auto;
  will-change: transform, opacity;
}

/* — 飘落阶段 — */
.sticker-leaf--falling {
  top: -160rpx;
  animation: leafFall 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

@keyframes leafFall {
  0% {
    opacity: 0;
    transform: translateY(0) translateX(60rpx) rotate(-15deg) scale(0.6);
  }
  20% {
    opacity: 1;
    transform: translateY(180rpx) translateX(-30rpx) rotate(8deg) scale(0.9);
  }
  50% {
    transform: translateY(450rpx) translateX(40rpx) rotate(-6deg) scale(1);
  }
  75% {
    transform: translateY(680rpx) translateX(-20rpx) rotate(4deg) scale(1);
  }
  100% {
    opacity: 1;
    transform: translateY(820rpx) translateX(0) rotate(6deg) scale(1);
  }
}

/* — 落地停留阶段 — */
.sticker-leaf--landed {
  top: -160rpx;
  transform: translateY(820rpx) translateX(0) rotate(6deg) scale(1);
  animation: leafSettle 0.4s ease-out forwards;
}

@keyframes leafSettle {
  0% {
    transform: translateY(820rpx) translateX(0) rotate(6deg) scale(1);
  }
  40% {
    transform: translateY(820rpx) translateX(0) rotate(0deg) scale(1.08);
  }
  100% {
    transform: translateY(820rpx) translateX(0) rotate(0deg) scale(1);
  }
}

/* — 退场阶段 — */
.sticker-leaf--leaving {
  top: -160rpx;
  transform: translateY(820rpx) translateX(0) rotate(0deg) scale(1);
  animation: leafLeave 0.5s ease-in forwards;
}

@keyframes leafLeave {
  0% {
    opacity: 1;
    transform: translateY(820rpx) translateX(0) rotate(0deg) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(820rpx) translateX(60rpx) rotate(12deg) scale(0.5);
  }
}

/* ====== 贴纸图标容器 ====== */

.sticker-leaf-icon {
  width: 128rpx;
  height: 128rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 253, 250, 0.92);
  border-radius: 50%;
  border: 2rpx solid rgba(158, 62, 50, 0.18);
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.08),
    0 8rpx 32rpx rgba(158, 62, 50, 0.1);
}

.sticker-leaf-img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.sticker-leaf-emoji {
  font-size: 72rpx;
  line-height: 1;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.12));
}

.sticker-leaf-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  background: linear-gradient(180deg, #fdf8ec 0%, #f5eed8 100%);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(193, 102, 62, 0.15);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: infoFadeIn 0.3s ease-out;
}

@keyframes infoFadeIn {
  from { opacity: 0; transform: translateY(8rpx); }
  to   { opacity: 1; transform: translateY(0); }
}

.sticker-leaf-label {
  font-size: 20rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: #8e857e;
}

.sticker-leaf-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #2d2d2d;
}
