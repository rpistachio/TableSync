.sticker-drop-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  animation: stickerMaskIn 0.3s ease-out;
}

@keyframes stickerMaskIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.sticker-drop-card {
  width: 100%;
  max-width: 520rpx;
  padding: 48rpx 40rpx;
  background: linear-gradient(180deg, #fdf8ec 0%, #f5eed8 100%);
  border-radius: 32rpx;
  border: 2rpx solid rgba(193, 102, 62, 0.2);
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.12);
  animation: stickerCardPop 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes stickerCardPop {
  from {
    opacity: 0;
    transform: scale(0.6);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.sticker-drop-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.sticker-drop-emoji {
  font-size: 72rpx;
  opacity: 0.9;
}

.sticker-drop-label {
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: #8e857e;
}

.sticker-drop-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d2d2d;
}

.sticker-drop-cta {
  display: block;
  text-align: center;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #c1663e;
  border: 2rpx solid rgba(193, 102, 62, 0.4);
  border-radius: 100rpx;
  background: rgba(255, 255, 255, 0.8);
}
