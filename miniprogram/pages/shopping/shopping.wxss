.shopping-page {
  min-height: 100vh;
  background-color: var(--bg);
  padding-bottom: 200rpx;
}

/* Header 三层结构：插画背景 + 渐变遮罩 + 文字内容 */
.page-header {
  position: relative;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 48rpx 40rpx 40rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.page-header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  filter: brightness(0.95);
  object-fit: cover;
}

.header-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: linear-gradient(to top,
    var(--bg) 0%,
    rgba(253, 249, 239, 0.85) 35%,
    rgba(253, 249, 239, 0.3) 65%,
    transparent 100%
  );
}

.header-content {
  position: relative;
  z-index: 3;
}

.curation-tag {
  display: block;
  font-size: 20rpx;
  letter-spacing: 4rpx;
  color: var(--accent-strong);
  font-weight: 700;
  text-transform: uppercase;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text);
  margin: 12rpx 0 8rpx;
}

.sub-title {
  display: block;
  font-size: 26rpx;
  color: var(--text-soft);
}

.meta-tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meta-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.prep-tag {
  background: var(--accent-soft);
  color: var(--accent-strong);
}

.allergen-tag {
  background: rgba(220, 100, 80, 0.12);
  color: #8e4a45;
}

.page-content {
  padding: 0 32rpx 48rpx;
}

.toolbar {
  margin-bottom: 24rpx;
  text-align: right;
}

.picker-label {
  font-size: 26rpx;
  color: var(--text-muted);
}

/* Zen Mode 别人做：温暖话术条 */
.helper-banner {
  padding: 24rpx 28rpx;
  margin: 0 32rpx 20rpx;
  background: linear-gradient(135deg, rgba(253, 248, 236, 0.95) 0%, rgba(252, 245, 224, 0.9) 100%);
  border-radius: 20rpx;
  border: 1rpx solid var(--accent-soft);
}

.helper-banner-text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #5a544f;
  line-height: 1.5;
  text-align: center;
}

/* 今日提示 - 家人贴心叮嘱风格 */
.category-card {
  margin-bottom: 24rpx;
  background: var(--card-bg-strong);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx var(--shadow);
}

/* 分类卡片标题 - 像超市货架索引 */
.category-card__title {
  padding: 20rpx 32rpx;
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: var(--accent);
  background: var(--accent-soft-2);
  border-bottom: none;
}

.category-card__list {
  padding: 0;
}

/* 列表行：优雅的点击反馈 */
.list-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx 32rpx;
  transition: all 0.3s ease;
  border-bottom: none;
}

.list-row.stripe {
  background: rgba(0, 0, 0, 0.02);
}

.list-row.is-done {
  opacity: 0.4;
}

/* 自定义圆形勾选框 */
.custom-check {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid var(--accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.list-row.is-done .custom-check {
  background: var(--accent);
}

.list-row__body {
  flex: 1;
  min-width: 0;
}

.name-amount-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.list-row__name {
  font-size: 32rpx;
  color: var(--text);
  font-weight: 500;
  transition: all 0.3s ease;
}

.list-row.is-done .list-row__name {
  text-decoration: line-through;
  color: var(--text-subtle);
}

.list-row__amount {
  font-size: 26rpx;
  color: var(--text-muted);
}

.fridge-tag {
  display: inline-block;
  margin-top: 8rpx;
  margin-right: 12rpx;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: rgba(129, 199, 132, 0.2);
  color: #2e7d32;
  border-radius: 8rpx;
}

.shared-tag {
  display: inline-block;
  margin-top: 8rpx;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: var(--accent-soft);
  color: var(--accent-strong);
}

.external-tag {
  background: rgba(107, 143, 181, 0.15);
  color: #4a7aa5;
}

.from-recipes-hint {
  display: block;
  margin-top: 4rpx;
  font-size: 20rpx;
  color: var(--text-subtle);
  line-height: 1.3;
}

.list-row__tags {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag-success {
  background: #e8f0e9;
  color: #4a5d4e;
}

.tag-warning {
  background: var(--accent-soft-2);
  color: var(--accent-strong);
}

.empty-hint {
  text-align: center;
  color: var(--text-muted);
  padding: 80rpx 32rpx;
  font-size: 28rpx;
}

.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 18rpx 24rpx;
  padding-bottom: calc(18rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, var(--bg-soft) 90%, transparent);
}

.btn-go-steps {
  width: 100%;
  height: 88rpx;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 28rpx;
  color: var(--text-inverse);
  background: var(--accent);
  border: none;
  line-height: 88rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(232, 74, 39, 0.25);
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.btn-go-steps::after {
  border: none;
}

.btn-go-steps:active {
  opacity: 0.92;
  transform: scale(0.98);
}
