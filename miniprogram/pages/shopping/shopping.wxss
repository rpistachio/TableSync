.shopping-page {
  min-height: 100vh;
  background-color: #fdf8f2;
  padding-bottom: 200rpx;
}

.page-header {
  padding: 32rpx 48rpx 24rpx;
  margin-bottom: 16rpx;
}

.curation-tag {
  font-size: 20rpx;
  letter-spacing: 4rpx;
  color: #c1663e;
  font-weight: 700;
}

.main-title {
  display: block;
  font-size: 52rpx;
  color: #2d2d2d;
  margin: 16rpx 0 8rpx;
}

.sub-title {
  font-size: 26rpx;
  color: #8e857e;
}

.page-content {
  padding: 0 32rpx 48rpx;
}

.main-tabs {
  display: flex;
  margin-bottom: 24rpx;
  border-radius: 100rpx;
  overflow: hidden;
  padding: 8rpx;
  background: rgba(0, 0, 0, 0.03);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 32rpx;
  font-weight: 600;
  font-size: 28rpx;
  color: #969799;
  border-radius: 100rpx;
  transition: all 0.25s ease;
}

.tab-item.active {
  color: #1C1C1E;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.notice-card {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 32rpx;
  background: rgba(193, 102, 62, 0.08);
  border-radius: 32rpx;
  border: 2rpx solid rgba(193, 102, 62, 0.15);
}

.notice-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.notice-text {
  font-size: 26rpx;
  color: #5a544f;
  line-height: 1.55;
}

.toolbar {
  margin-bottom: 24rpx;
  text-align: right;
}

.picker-label {
  font-size: 26rpx;
  color: #8e857e;
}

.category-card {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(74, 69, 64, 0.06);
}

.category-card__title {
  padding: 24rpx 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #4a4540;
  background: #fff;
  border-bottom: 2rpx solid #f0ede9;
}

.category-card__list {
  padding: 16rpx 0;
}

.list-row {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 20rpx 32rpx;
  min-height: 104rpx;
}

.list-row.is-done .list-row__name {
  text-decoration: line-through;
  color: #969799;
}

.list-row__body {
  flex: 1;
  min-width: 0;
}

.list-row__name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

.list-row__amount {
  font-size: 24rpx;
  color: #8e857e;
  margin-top: 8rpx;
  display: block;
}

.list-row__tags {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag-success {
  background: #e8f0e9;
  color: #4a5d4e;
}

.tag-warning {
  background: #fff3e0;
  color: #c1663e;
}

.empty-hint {
  text-align: center;
  color: #8e857e;
  padding: 80rpx 32rpx;
  font-size: 28rpx;
}

.page-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 48rpx 48rpx;
  background: linear-gradient(to top, #fdf8f2 85%, transparent);
}

.copy-btn {
  height: 96rpx;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 32rpx;
  background: #2d2d2d;
  color: #fff;
  border: none;
  line-height: 96rpx;
}
