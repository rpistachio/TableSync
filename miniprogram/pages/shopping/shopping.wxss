.shopping-page {
  min-height: 100vh;
  background-color: #fdf8f2;
  padding-bottom: 200rpx;
}

.page-header {
  padding: 32rpx 48rpx 24rpx;
  margin-bottom: 16rpx;
}

.curation-tag {
  font-size: 20rpx;
  letter-spacing: 4rpx;
  color: #c1663e;
  font-weight: 700;
}

.main-title {
  display: block;
  font-size: 52rpx;
  color: #2d2d2d;
  margin: 16rpx 0 8rpx;
}

.sub-title {
  font-size: 26rpx;
  color: #8e857e;
}

.meta-tags {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.prep-tag {
  background: rgba(193, 102, 62, 0.1);
  color: #c1663e;
}

.allergen-tag {
  background: rgba(220, 100, 80, 0.12);
  color: #8e4a45;
}

.page-content {
  padding: 0 32rpx 48rpx;
}

.toolbar {
  margin-bottom: 24rpx;
  text-align: right;
}

.picker-label {
  font-size: 26rpx;
  color: #8e857e;
}

.today-tips {
  padding: 24rpx 28rpx;
  margin-bottom: 24rpx;
  background: rgba(193, 102, 62, 0.06);
  border-radius: 24rpx;
  border-left: 6rpx solid #c1663e;
}

.today-tip-line {
  display: block;
  font-size: 24rpx;
  color: #5a544f;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.today-tip-line:last-child {
  margin-bottom: 0;
}

.category-card {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(74, 69, 64, 0.06);
}

.category-card__title {
  padding: 24rpx 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #4a4540;
  background: #fff;
  border-bottom: 2rpx solid #f0ede9;
}

.category-card__list {
  padding: 16rpx 0;
}

.list-row {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 20rpx 32rpx;
  min-height: 104rpx;
}

.list-row.is-done .list-row__name {
  text-decoration: line-through;
  color: #969799;
}

.list-row__body {
  flex: 1;
  min-width: 0;
}

.list-row__name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

.list-row__amount {
  font-size: 24rpx;
  color: #8e857e;
  margin-top: 8rpx;
  display: block;
}

.list-row__tags {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag-success {
  background: #e8f0e9;
  color: #4a5d4e;
}

.tag-warning {
  background: #fff3e0;
  color: #c1663e;
}

.empty-hint {
  text-align: center;
  color: #8e857e;
  padding: 80rpx 32rpx;
  font-size: 28rpx;
}

.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 48rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, #fdf8f2 90%, transparent);
}

.btn-go-steps {
  width: 100%;
  height: 100rpx;
  border-radius: 28rpx;
  font-weight: 700;
  font-size: 34rpx;
  color: #fff;
  background: linear-gradient(135deg, #c1663e 0%, #a8522e 100%);
  border: none;
  line-height: 100rpx;
  box-shadow: 0 8rpx 24rpx rgba(193, 102, 62, 0.35);
}
