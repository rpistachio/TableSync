/* 全屏预览页：温暖米白背景（护眼），整页可下拉滚动 */
.preview-page {
  min-height: 100vh;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #faf6f0;
  box-sizing: border-box;
}

/* 整页滚动：顶部到底部菜单区域一体可拉，高度占满除底部按钮外的空间（小程序 scroll-view 需有明确高度） */
.preview-page-scroll {
  flex: 1;
  min-height: 0;
  width: 100%;
  box-sizing: border-box;
}

.preview-scroll-content {
  min-height: 100%;
  padding-bottom: 32rpx;
  box-sizing: border-box;
}

/* 右上角：大字模式开关 */
.preview-top-bar {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx 32rpx 16rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
}

.preview-top-bar-spacer {
  flex: 1;
}

.preview-large-mode-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 69, 64, 0.12);
  border: 2rpx solid rgba(193, 102, 62, 0.25);
}

.preview-large-mode-btn.is-active {
  background: rgba(193, 102, 62, 0.15);
  border-color: #c1663e;
}

.preview-large-mode-icon {
  font-size: 36rpx;
  line-height: 1;
}

.preview-large-mode-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #5a544f;
}

.preview-large-mode-btn.is-active .preview-large-mode-label {
  color: #c1663e;
}

.preview-header {
  padding: 32rpx 40rpx 24rpx;
  flex-shrink: 0;
}

.preview-heading {
  display: block;
  font-size: 26rpx;
  color: #8e857e;
  margin-bottom: 8rpx;
}

.preview-count {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #2d2d2d;
}

.preview-combo {
  display: block;
  font-size: 28rpx;
  color: #c1663e;
  margin-top: 12rpx;
  font-weight: 500;
}

.preview-balance {
  display: block;
  font-size: 26rpx;
  color: #8e857e;
  margin-top: 8rpx;
}

/* 菜谱池降级提示：温和的蓝色调，与错误提示区分 */
.preview-fallback-notice {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx 28rpx;
  margin: 16rpx 32rpx 0;
  background: rgba(100, 149, 237, 0.12);
  border-radius: 16rpx;
  border-left: 6rpx solid rgba(100, 149, 237, 0.6);
}

.preview-fallback-notice .fallback-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  line-height: 1.4;
}

.preview-fallback-notice .fallback-text {
  font-size: 26rpx;
  color: #4a5d6e;
  line-height: 1.5;
  flex: 1;
}

.preview-dashboard {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  margin: 0 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 69, 64, 0.06);
}

.dashboard-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 16rpx;
}

.dashboard-item {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.dashboard-item-full {
  flex: none;
  width: 100%;
  align-items: flex-start;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(142, 133, 126, 0.15);
}

.dashboard-item-full .dashboard-value-wrap {
  text-align: left;
}

.dashboard-icon {
  font-size: 36rpx;
  line-height: 1;
}

.dashboard-label {
  font-size: 24rpx;
  color: #8e857e;
}

.dashboard-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
}

.dashboard-value-wrap {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
  word-break: break-all;
  white-space: normal;
  line-height: 1.45;
}

.preview-hints {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  margin: 0 32rpx 20rpx;
  background: rgba(193, 102, 62, 0.08);
  border-radius: 20rpx;
  border-left: 6rpx solid rgba(193, 102, 62, 0.4);
}

.preview-hints .hint-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.preview-hints .hint-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  line-height: 1.4;
}

.preview-hints .hint-text {
  font-size: 26rpx;
  color: #4a4540;
  line-height: 1.45;
  flex: 1;
}

.preview-baby-diff {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  margin: 0 32rpx 20rpx;
  background: rgba(193, 102, 62, 0.08);
  border-radius: 20rpx;
  border-left: 6rpx solid #c1663e;
}

.preview-baby-diff-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.preview-baby-diff-text {
  font-size: 28rpx;
  color: #5a544f;
  line-height: 1.45;
}

.preview-menu-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #4a4540;
  margin: 0 32rpx 20rpx;
}

/* 宝宝餐说明：有宝宝时在菜单列表上方提示 */
.preview-baby-hint {
  margin: 0 32rpx 20rpx;
  padding: 16rpx 24rpx;
  background: rgba(193, 102, 62, 0.08);
  border-radius: 16rpx;
  border-left: 6rpx solid #c1663e;
  font-size: 26rpx;
  color: #5a544f;
  line-height: 1.45;
}

/* 每道菜：大圆角矩形卡片，文字居中（在整页滚动内，不再单独 scroll-view） */
.preview-dish-list {
  padding: 0 32rpx 48rpx;
}

.dish-card-names {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.dish-card-adult-row,
.dish-card-baby-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.dish-card-role-tag {
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.dish-card-role-tag.adult-tag {
  background: rgba(74, 93, 78, 0.15);
  color: #4a5d4e;
}

.dish-card-role-tag.baby-tag {
  background: rgba(214, 122, 125, 0.2);
  color: #c1663e;
}

.dish-card-baby-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #c1663e;
  line-height: 1.4;
}

.dish-card-same-hint {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #8e857e;
  line-height: 1.4;
  text-align: center;
}

.dish-card-wrap {
  margin-bottom: 24rpx;
}

.dish-card {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 160rpx;
  padding: 36rpx 40rpx;
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 69, 64, 0.08);
  border: 3rpx solid rgba(193, 102, 62, 0.2);
  text-align: center;
  position: relative;
}

.dish-card-unchecked {
  opacity: 0.65;
  border-color: rgba(0, 0, 0, 0.08);
}

.dish-card-check {
  position: absolute;
  left: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 44rpx;
  height: 44rpx;
  border-radius: 12rpx;
  border: 3rpx solid #c1663e;
  background: #c1663e;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dish-card-unchecked .dish-card-check {
  background: transparent;
  color: transparent;
  border-color: #c1663e;
}

.dish-card-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 56rpx;
  padding-right: 24rpx;
}

.dish-card-main {
  font-size: 34rpx;
  font-weight: 600;
  color: #2d2d2d;
  line-height: 1.4;
  text-align: center;
}

.dish-card-adult-row .dish-card-main {
  font-size: 34rpx;
}

.dish-card-reason {
  display: block;
  font-size: 26rpx;
  color: #8e857e;
  margin-top: 12rpx;
  line-height: 1.4;
  text-align: center;
}

.preview-actions {
  flex-shrink: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, #faf6f0 90%, rgba(250, 246, 240, 0));
}

.preview-btn {
  flex: 1;
  min-width: 0;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.preview-btn::after {
  border: none;
}

.preview-btn-secondary {
  color: #5a544f;
  background: #efe9e2;
}

.preview-btn-primary {
  color: #fff;
  background: #c1663e;
}

.preview-btn:active {
  opacity: 0.9;
}

/* ---------- 大字模式：全局 class 放大 1.5 倍 + 隐藏修饰信息 ---------- */
.preview-page.large-text-mode .preview-dashboard,
.preview-page.large-text-mode .preview-hints,
.preview-page.large-text-mode .preview-baby-diff,
.preview-page.large-text-mode .preview-menu-label,
.preview-page.large-text-mode .preview-fallback-notice,
.preview-page.large-text-mode .dish-card-reason {
  display: none !important;
}

.preview-page.large-text-mode .preview-baby-hint {
  font-size: 39rpx;
}

.preview-page.large-text-mode .dish-card-role-tag {
  font-size: 30rpx;
  padding: 6rpx 16rpx;
}

.preview-page.large-text-mode .dish-card-baby-name {
  font-size: 45rpx;
}

.preview-page.large-text-mode .dish-card-same-hint {
  font-size: 36rpx;
}

.preview-page.large-text-mode .preview-heading {
  font-size: 39rpx;
}

.preview-page.large-text-mode .preview-count {
  font-size: 60rpx;
}

.preview-page.large-text-mode .preview-combo {
  font-size: 42rpx;
}

.preview-page.large-text-mode .preview-balance {
  font-size: 39rpx;
}

.preview-page.large-text-mode .dish-card-main {
  font-size: 51rpx;
}

.preview-page.large-text-mode .dish-card-check {
  width: 56rpx;
  height: 56rpx;
  left: 32rpx;
  font-size: 42rpx;
  border-radius: 14rpx;
}

.preview-page.large-text-mode .dish-card-content {
  padding-left: 72rpx;
}

.preview-page.large-text-mode .dish-card {
  min-height: 200rpx;
  padding: 44rpx 40rpx;
}

.preview-page.large-text-mode .preview-btn {
  height: 112rpx;
  line-height: 112rpx;
  font-size: 45rpx;
}

.preview-page.large-text-mode .preview-large-mode-icon {
  font-size: 40rpx;
}

.preview-page.large-text-mode .preview-large-mode-label {
  font-size: 32rpx;
}
