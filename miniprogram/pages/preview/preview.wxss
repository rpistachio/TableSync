/* 全屏预览页：极浅高级灰背景，整页可下拉滚动 */
.preview-page {
  min-height: 100vh;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
  box-sizing: border-box;
}

/* 整页滚动：顶部到底部菜单区域一体可拉，高度占满除底部按钮外的空间（小程序 scroll-view 需有明确高度） */
.preview-page-scroll {
  flex: 1;
  min-height: 0;
  width: 100%;
  box-sizing: border-box;
}

.preview-scroll-content {
  min-height: 100%;
  padding-bottom: 32rpx;
  box-sizing: border-box;
}

/* 右上角：大字模式开关 */
.preview-top-bar {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx 32rpx 16rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
}

.preview-top-bar-spacer {
  flex: 1;
}

.preview-large-mode-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 69, 64, 0.12);
  border: 2rpx solid rgba(232, 168, 124, 0.25);
}

.preview-large-mode-btn.is-active {
  background: rgba(232, 168, 124, 0.15);
  border-color: #E8A87C;
}

.preview-large-mode-icon {
  font-size: 36rpx;
  line-height: 1;
}

.preview-large-mode-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #5a544f;
}

.preview-large-mode-btn.is-active .preview-large-mode-label {
  color: #E8A87C;
}

/* 三层夹心：底层图片 -> 中层渐变 -> 顶层文字 */
.preview-header {
  position: relative;
  padding: 120rpx 40rpx 40rpx;
  overflow: hidden;
  min-height: 380rpx;
  display: flex;
  align-items: flex-end;
  flex-shrink: 0;
}

.header-ambient-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  filter: blur(4px) brightness(0.9);
}

.header-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: linear-gradient(to top,
    rgba(250, 246, 240, 1) 0%,
    rgba(250, 246, 240, 0.6) 40%,
    rgba(250, 246, 240, 0) 100%
  );
}

/* 品牌线条水印（叉子+勺子交叉） */
.header-brand-lines {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  width: 160rpx;
  height: 160rpx;
  opacity: 0.08;
  z-index: 2;
}

/* 叉子线条 */
.header-brand-lines::before {
  content: "";
  position: absolute;
  width: 4rpx;
  height: 120rpx;
  background: #E8A87C;
  left: 50%;
  top: 20rpx;
  transform: translateX(-50%) rotate(-15deg);
  border-radius: 2rpx;
}

/* 勺子线条 */
.header-brand-lines::after {
  content: "";
  position: absolute;
  width: 4rpx;
  height: 120rpx;
  background: #E8A87C;
  left: 50%;
  top: 20rpx;
  transform: translateX(-50%) rotate(15deg);
  border-radius: 2rpx;
}

.header-content {
  position: relative;
  z-index: 3;
  width: 100%;
}

.title-row {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
  gap: 24rpx;
}

.title-text {
  flex: 1;
  min-width: 0;
}

/* 微缩转盘：圆点展开为三环+logo */
.mini-spinner-wrap {
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.mini-spinner {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #E8A87C;
  transform: scale(0.2);
  opacity: 0;
}

.pop-and-expand {
  animation: expandSpinner 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

@keyframes expandSpinner {
  0% {
    transform: scale(0.2);
    opacity: 0;
    background: #E8A87C;
  }
  30% {
    opacity: 1;
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
    background: transparent;
  }
}

.mini-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2rpx solid rgba(139, 90, 43, 0.55);
  border-radius: 50%;
}

.mini-ring.ring-1 {
  width: 100%;
  height: 100%;
}

.mini-ring.ring-2 {
  width: 70%;
  height: 70%;
}

.mini-ring.ring-3 {
  width: 40%;
  height: 40%;
}

.mini-logo {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.15));
}

.preview-heading {
  display: block;
  font-size: 28rpx;
  color: #5a544f;
  opacity: 0.8;
  letter-spacing: 2rpx;
}

.preview-count {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2d2d2d;
  margin-top: 10rpx;
}

.header-sub-info {
  margin-top: 12rpx;
}

.header-sub-info .preview-combo {
  display: block;
}

.header-sub-info .preview-balance {
  display: block;
  margin-top: 8rpx;
}

.preview-combo {
  font-size: 28rpx;
  color: #E8A87C;
  font-weight: 500;
}

.preview-balance {
  font-size: 26rpx;
  color: #8e857e;
}

/* 菜谱池降级提示：温和的蓝色调，与错误提示区分 */
.preview-fallback-notice {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx 28rpx;
  margin: 16rpx 32rpx 0;
  background: rgba(100, 149, 237, 0.12);
  border-radius: 16rpx;
  border-left: 6rpx solid rgba(100, 149, 237, 0.6);
}

.preview-fallback-notice .fallback-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  line-height: 1.4;
}

.preview-fallback-notice .fallback-text {
  font-size: 26rpx;
  color: #4a5d6e;
  line-height: 1.5;
  flex: 1;
}

/* 横向数字看板 */
.dashboard-bar {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  padding: 16rpx 32rpx;
  gap: 24rpx;
  margin: 0 32rpx 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 69, 64, 0.06);
}

.dash-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 16rpx;
  flex-shrink: 0;
}

.dash-icon {
  font-size: 32rpx;
  line-height: 1;
}

.dash-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d2d2d;
}

.preview-hints {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  margin: 0 32rpx 20rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 20rpx;
  border-left: 6rpx solid rgba(232, 168, 124, 0.4);
}

.preview-hints .hint-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.preview-hints .hint-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  line-height: 1.4;
}

.preview-hints .hint-text {
  font-size: 26rpx;
  color: #4a4540;
  line-height: 1.45;
  flex: 1;
}

.preview-baby-diff {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  margin: 0 32rpx 20rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 20rpx;
  border-left: 6rpx solid #E8A87C;
}

.preview-baby-diff-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.preview-baby-diff-text {
  font-size: 28rpx;
  color: #5a544f;
  line-height: 1.45;
}

.preview-menu-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #4a4540;
  margin: 0 32rpx 20rpx;
}

/* 宝宝餐说明：有宝宝时在菜单列表上方提示 */
.preview-baby-hint {
  margin: 0 32rpx 20rpx;
  padding: 16rpx 24rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 16rpx;
  border-left: 6rpx solid #E8A87C;
  font-size: 26rpx;
  color: #5a544f;
  line-height: 1.45;
}

/* 今日菜单列表 */
.preview-dish-list {
  padding: 0 32rpx 48rpx;
}

.dish-card-wrap {
  margin-bottom: 24rpx;
}

/* 瀑布流滑入动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 现代菜谱卡片：封面图 + 半透明渐变遮罩 */
.dish-card-modern {
  position: relative;
  height: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.05);
  animation: slideInUp 0.5s ease-out both;
}

.card-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-overlay {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, transparent 60%);
}

.card-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  color: #fff;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.dish-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.35;
  flex: 1;
  min-width: 0;
}

.check-badge {
  width: 44rpx;
  height: 44rpx;
  border-radius: 12rpx;
  background: #E8A87C;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-footer {
  margin-top: 8rpx;
}

.dish-reason {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.baby-tag-floating {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.4;
}

/* 无封面图：温暖渐变背景 */
.dish-card-modern.no-cover {
  background: linear-gradient(135deg, #f5e6d3 0%, #e8d4c0 100%);
}

.dish-card-modern.no-cover .card-overlay {
  background: transparent;
}

.dish-card-modern.no-cover .card-info {
  color: #4a4540;
}

.dish-card-modern.no-cover .dish-name {
  color: #2d2d2d;
}

.dish-card-modern.no-cover .dish-reason,
.dish-card-modern.no-cover .baby-tag-floating {
  color: #5a544f;
}

/* 未勾选：弱化显示 */
.dish-card-modern.is-unchecked {
  opacity: 0.65;
}

.dish-card-modern.is-unchecked .card-bg {
  filter: grayscale(0.5);
}

.preview-actions {
  flex-shrink: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, #F8F9FA 90%, rgba(248, 249, 250, 0));
}

.preview-btn {
  flex: 1;
  min-width: 0;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  text-align: center;
}

.preview-btn::after {
  border: none;
}

.preview-btn-secondary {
  color: #5a544f;
  background: #efe9e2;
}

.preview-btn-primary {
  color: #fff;
  background: #E8A87C;
}

.preview-btn:active {
  opacity: 0.9;
}

/* ---------- 大字模式：隐藏背景图，高对比度黑白文字，确保护眼 ---------- */
.preview-page.large-text-mode .dashboard-bar,
.preview-page.large-text-mode .preview-hints,
.preview-page.large-text-mode .preview-baby-diff,
.preview-page.large-text-mode .preview-menu-label,
.preview-page.large-text-mode .preview-fallback-notice,
.preview-page.large-text-mode .dish-reason,
.preview-page.large-text-mode .mini-spinner-wrap,
.preview-page.large-text-mode .header-brand-lines {
  display: none !important;
}

.preview-page.large-text-mode .card-bg {
  display: none !important;
}

.preview-page.large-text-mode .dish-card-modern {
  background: #fff;
  min-height: 200rpx;
  height: auto;
  padding: 44rpx 40rpx;
}

.preview-page.large-text-mode .dish-card-modern.no-cover {
  background: #fff;
}

.preview-page.large-text-mode .card-overlay {
  display: none;
}

.preview-page.large-text-mode .card-info {
  position: relative;
  color: #111;
  padding: 0;
}

.preview-page.large-text-mode .dish-name {
  font-size: 51rpx;
  font-weight: 600;
  color: #111;
}

.preview-page.large-text-mode .baby-tag-floating {
  display: block;
  margin-top: 12rpx;
  font-size: 39rpx;
  color: #333;
}

.preview-page.large-text-mode .check-badge {
  width: 56rpx;
  height: 56rpx;
  font-size: 42rpx;
  border-radius: 14rpx;
  background: #333;
  color: #fff;
}

.preview-page.large-text-mode .preview-baby-hint {
  font-size: 39rpx;
}

.preview-page.large-text-mode .preview-heading {
  font-size: 39rpx;
}

.preview-page.large-text-mode .preview-count {
  font-size: 60rpx;
}

.preview-page.large-text-mode .preview-combo {
  font-size: 42rpx;
}

.preview-page.large-text-mode .preview-balance {
  font-size: 39rpx;
}

.preview-page.large-text-mode .preview-btn {
  height: 112rpx;
  line-height: 112rpx;
  font-size: 45rpx;
}

.preview-page.large-text-mode .preview-large-mode-icon {
  font-size: 40rpx;
}

.preview-page.large-text-mode .preview-large-mode-label {
  font-size: 32rpx;
}
