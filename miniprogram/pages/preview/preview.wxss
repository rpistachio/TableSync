/* 预览页：暖白底色 + 顶部氛围渐变，使用页面自然滚动 */
.preview-page {
  background: linear-gradient(180deg, rgba(27, 61, 47, 0.05) 0%, var(--bg) 12%);
  background-color: var(--bg);
  box-sizing: border-box;
}

.preview-page-scroll {
  width: 100%;
  box-sizing: border-box;
}

.preview-scroll-content {
  padding-bottom: 220rpx;
  box-sizing: border-box;
}


.preview-header {
  position: relative;
  padding: 44rpx 40rpx 24rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}

.preview-header-text {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 20rpx;
  padding: 22rpx 24rpx;
  background: linear-gradient(135deg, rgba(27, 61, 47, 0.05) 0%, rgba(27, 61, 47, 0.02) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(27, 61, 47, 0.08);
}

/* 营养师插图 */
.preview-header-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 文字区 */
.preview-header-text-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.preview-header-divider {
  margin-top: 18rpx;
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  width: 100%;
}

.preview-header-title {
  display: block;
  font-size: 24rpx;
  color: var(--text-muted);
  letter-spacing: 2rpx;
}

.preview-narrative {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-soft);
  line-height: 1.6;
}


/* 横向数字看板 */
.dashboard-bar {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  padding: 12rpx 28rpx;
  gap: 16rpx;
  margin: 0 32rpx 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.dash-item {
  display: flex;
  align-items: center;
  padding: 10rpx 16rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 14rpx;
  flex-shrink: 0;
}

.dash-value {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text);
}

/* 今日提示条 */
.preview-tips-bar {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 18rpx 24rpx;
  margin: 0 32rpx 16rpx;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.preview-tips-bar .tips-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.preview-tips-bar .tips-dot {
  font-size: 20rpx;
  color: var(--text-muted);
  line-height: 1.4;
}

.preview-tips-bar .tips-text {
  font-size: 24rpx;
  color: var(--text-soft);
  line-height: 1.5;
  flex: 1;
}

/* 主厨报告：AI 推荐理由 */
.preview-menu-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  margin: 0 32rpx 16rpx;
}

.preview-menu-label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
}

.preview-menu-titles {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  flex-wrap: wrap;
}

.preview-person-picker-wrap {
  position: relative;
  padding: 10rpx 20rpx;
  background: rgba(253, 248, 242, 0.95);
  border: 1rpx solid var(--accent-border);
  border-radius: 100rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.preview-person-picker-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #5a544f;
  letter-spacing: 1rpx;
}

.preview-person-bubble {
  position: absolute;
  top: 100%;
  left: 0;
  margin-top: 8rpx;
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 16rpx;
  border: 1rpx solid var(--accent-border);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 20;
}

.preview-person-option {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 100rpx;
}

.preview-person-option:active {
  background: var(--accent-soft);
  color: var(--accent);
}

.preview-header-pickers {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.preview-baby-toggle-wrap {
  position: relative;
  padding: 10rpx 20rpx;
  background: rgba(253, 248, 242, 0.95);
  border: 1rpx solid var(--accent-border);
  border-radius: 100rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.preview-baby-toggle-wrap.preview-baby-toggle-active {
  background: var(--accent-soft);
  border-color: var(--accent-border);
}

.preview-baby-toggle-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #5a544f;
  letter-spacing: 1rpx;
}

.preview-baby-toggle-active .preview-baby-toggle-label {
  color: var(--accent);
}

.preview-baby-toggle-active-inner {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
}

.preview-baby-remove {
  font-size: 22rpx;
  color: var(--text-muted);
  padding: 4rpx 6rpx;
}

.preview-baby-remove:active {
  color: var(--accent);
}

.preview-baby-bubble {
  position: absolute;
  top: 100%;
  right: 0;
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 16rpx;
  border: 1rpx solid var(--accent-border);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 20;
}

.preview-baby-option {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 100rpx;
  white-space: nowrap;
}

.preview-baby-option:active {
  background: var(--accent-soft);
  color: var(--accent);
}

.preview-add-dish-placeholder {
  margin: 24rpx 32rpx;
  padding: 28rpx 32rpx;
  border: 2rpx dashed var(--accent-border);
  border-radius: 20rpx;
  text-align: center;
  background: rgba(253, 248, 242, 0.5);
}

.preview-add-dish-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--accent);
  letter-spacing: 2rpx;
}

.preview-avoid-bar {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 12rpx 32rpx 20rpx;
  gap: 10rpx;
}

.preview-avoid-chip {
  padding: 8rpx 18rpx;
  font-size: 22rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  background: rgba(255, 255, 255, 0.5);
}

.preview-avoid-chip.is-active {
  background: var(--accent-soft);
  border-color: var(--accent-border);
}

.preview-avoid-label {
  font-size: 22rpx;
  font-weight: 400;
  color: #8a8580;
}

.preview-avoid-chip.is-active .preview-avoid-label {
  color: var(--accent);
  font-weight: 500;
}

.preview-menu-subtitle {
  font-size: 24rpx;
  color: var(--text-muted);
}

.preview-rhythm-inline {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-shrink: 0;
}

.preview-rhythm-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.preview-ring-svg-wrap {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.02);
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-ring-svg {
  width: 36rpx;
  height: 36rpx;
}

.preview-ring-track {
  fill: none;
  stroke: rgba(0, 0, 0, 0.08);
  stroke-width: 8;
}

.preview-ring-progress {
  fill: none;
  stroke-width: 8;
  stroke-linecap: round;
  transform: rotate(-90deg);
  transform-origin: 50% 50%;
}

.preview-ring-label {
  font-size: 22rpx;
  color: var(--text-muted);
  max-width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 宝宝餐说明：有宝宝时在菜单列表上方提示 */
.preview-baby-hint {
  margin: 0 32rpx 20rpx;
  padding: 14rpx 22rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 14rpx;
  font-size: 24rpx;
  color: var(--text-soft);
  line-height: 1.45;
}

/* 今日菜单列表：左右留白收窄，菜品图框更宽 */
.preview-dish-list {
  padding: 0 16rpx 48rpx;
}

.dish-card-wrap {
  margin-bottom: 24rpx;
}

/* 瀑布流滑入动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 现代菜谱卡片：封面图 + 半透明渐变遮罩，高度略增便于看清菜品 */
.dish-card-modern {
  position: relative;
  height: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
  animation: slideInUp 0.5s ease-out both;
}

.card-bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  object-fit: cover;
  /* 焦点下移，多露出菜品、少裁掉碗沿，避免菜被顶边裁掉 */
  object-position: center 30%;
}

.card-overlay {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.35) 0%, transparent 62%);
}

.card-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 22rpx 24rpx;
  color: #fff;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.35;
  flex: 1;
  min-width: 0;
}

.check-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-action-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.replace-badge {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.85);
  color: #4f4a45;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.remove-badge {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(220, 80, 60, 0.9);
  color: #fff;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.card-footer {
  margin-top: 8rpx;
}

.dish-reason {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.4;
}

.baby-tag-floating {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.4;
}

/* 无封面图：温暖渐变背景 */
.dish-card-modern.no-cover {
  background: linear-gradient(135deg, #f3f1ec 0%, #e9e5dd 100%);
}

.dish-card-modern.no-cover .card-overlay {
  background: transparent;
}

.dish-card-modern.no-cover .card-info {
  color: #4a4540;
}

.dish-card-modern.no-cover .dish-name {
  color: #2f2f2f;
}

.dish-card-modern.no-cover .dish-reason,
.dish-card-modern.no-cover .baby-tag-floating {
  color: #6b6662;
}

/* 未勾选：弱化显示 */
.dish-card-modern.is-unchecked {
  opacity: 0.72;
}

.dish-card-modern.is-unchecked .card-bg {
  filter: saturate(0.85) brightness(0.95);
}

/* ============ 统筹对比区域 ============ */
.schedule-compare-section {
  margin: 0 32rpx 24rpx;
  padding: 28rpx 24rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  animation: slideInUp 0.5s ease-out both;
}

.compare-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.compare-label {
  font-size: 22rpx;
  color: #8a8580;
  width: 160rpx;
  flex-shrink: 0;
}

.compare-bar-track {
  flex: 1;
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.compare-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  transition: width 0.8s ease;
}

.compare-bar-serial {
  background: rgba(0, 0, 0, 0.12);
}

.compare-bar-parallel {
  background: linear-gradient(90deg, var(--accent), #f7a862);
}

.compare-time {
  font-size: 24rpx;
  font-weight: 600;
  width: 100rpx;
  text-align: right;
  flex-shrink: 0;
}

.compare-time-serial {
  color: #8a8580;
  text-decoration: line-through;
}

.compare-time-parallel {
  color: var(--accent);
}

.efficiency-stamp {
  display: inline-flex;
  padding: 10rpx 28rpx;
  margin: 8rpx 0 20rpx;
  background: linear-gradient(135deg, rgba(90, 180, 90, 0.1), rgba(60, 160, 60, 0.05));
  border: 1rpx solid rgba(90, 180, 90, 0.25);
  border-radius: 100rpx;
  animation: stampIn 0.6s ease-out 0.3s both;
}

.efficiency-stamp-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #3c8c3c;
  letter-spacing: 1rpx;
}

@keyframes stampIn {
  0% { opacity: 0; transform: scale(0.8); }
  100% { opacity: 1; transform: scale(1); }
}

.tired-mode-hint {
  margin: 8rpx 0 20rpx;
}

.tired-hint-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #5a9b6e;
  letter-spacing: 1rpx;
}

/* 烹饪顺序时间线 */
.cooking-timeline {
  margin-bottom: 20rpx;
  margin-top: 8rpx;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.timeline-title {
  margin-bottom: 16rpx;
}

.timeline-title-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-soft);
  letter-spacing: 1rpx;
}

.timeline-list {
  display: flex;
  flex-direction: column;
}

.timeline-item {
  display: flex;
  gap: 16rpx;
  min-height: 80rpx;
}

.timeline-dot-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  width: 52rpx;
}

.timeline-dot {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--accent-soft) 0%, var(--accent-soft-2) 100%);
  border: 2rpx solid var(--accent-border);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.timeline-dot-icon {
  font-size: 22rpx;
  line-height: 1;
}

.timeline-line {
  width: 3rpx;
  flex: 1;
  min-height: 24rpx;
  background: linear-gradient(180deg, rgba(232, 168, 124, 0.3) 0%, rgba(232, 168, 124, 0.08) 100%);
  margin: 6rpx 0;
}

.timeline-content {
  flex: 1;
  min-width: 0;
  padding-bottom: 20rpx;
}

.timeline-item:last-child .timeline-content {
  padding-bottom: 4rpx;
}

.timeline-phase-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.timeline-phase {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
  line-height: 1.4;
}

.schedule-compare-section .timeline-content .timeline-time {
  font-size: 22rpx;
  font-weight: 500;
  color: var(--accent);
  white-space: nowrap;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.timeline-dishes {
  display: block;
  font-size: 24rpx;
  color: var(--text-soft);
  line-height: 1.5;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.timeline-note {
  display: block;
  font-size: 22rpx;
  color: var(--text-subtle);
  line-height: 1.4;
}

.preview-page-tired .timeline-item-no-watch .timeline-note {
  color: #5a9b6e;
  font-weight: 500;
}

.preview-actions {
  display: flex;
  gap: 16rpx;
  padding: 18rpx 24rpx;
  padding-bottom: calc(18rpx + env(safe-area-inset-bottom));
  background: rgba(248, 249, 250, 0.98);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.preview-btn {
  flex: 1;
  min-width: 0;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.preview-btn::after {
  border: none;
}

.preview-btn-secondary {
  color: var(--text);
  background: #f1ede8;
}

.preview-btn-ghost {
  color: var(--text-muted);
  background: transparent;
  border: 1rpx solid var(--line);
}

.preview-btn-primary {
  flex: 1.2;
  color: #fff;
  background: var(--accent);
  box-shadow: 0 8rpx 24rpx rgba(232, 74, 39, 0.25);
}

.preview-btn:active {
  opacity: 0.92;
  transform: scale(0.98);
}

/* Zen Mode 状态差异化：疲惫模式冷色调 */
.preview-page-tired {
  background: linear-gradient(180deg, rgba(235, 240, 248, 0.4) 0%, var(--bg) 30%);
}

.preview-page-helper {
  background: linear-gradient(180deg, rgba(253, 248, 236, 0.35) 0%, var(--bg) 25%);
}

.dash-item-helper .dash-value {
  color: #5a9b6e;
  font-weight: 600;
}

.airfryer-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 6rpx 14rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #2d7a3e;
  background: rgba(76, 175, 80, 0.2);
  border-radius: 100rpx;
  border: 1rpx solid rgba(76, 175, 80, 0.35);
  z-index: 2;
}

.helper-card-wrap {
  margin: 0 32rpx 24rpx;
}

/* 疲惫模式：统筹区色调与印章 */
.preview-page-tired .schedule-compare-section {
  background: linear-gradient(135deg, rgba(250, 245, 235, 0.9), rgba(240, 235, 225, 0.7));
  border-color: rgba(200, 180, 150, 0.15);
}

.preview-page-tired .compare-bar-parallel {
  background: linear-gradient(90deg, #7ba68e, #a8d4b8);
}

.preview-page-tired .compare-time-parallel {
  color: #5a9b6e;
}

.preview-page-tired .efficiency-stamp-text,
.preview-page-tired .tired-hint-text {
  color: #5a9b6e;
}

/* 自选菜谱弹出面板（pp- 前缀） */
.pp-panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 200;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.pp-panel-mask.pp-panel-mask-visible {
  opacity: 1;
  pointer-events: auto;
}

.pp-add-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.pp-add-panel.pp-add-panel-visible {
  transform: translateY(0);
}

.pp-panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx 16rpx;
  flex-shrink: 0;
}

.pp-panel-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text);
  letter-spacing: 1rpx;
}

.pp-panel-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--line);
  border-radius: 50%;
}

.pp-panel-close-icon {
  font-size: 36rpx;
  color: var(--text-muted);
  font-weight: 300;
  line-height: 1;
}

.pp-panel-tabs {
  display: flex;
  gap: 16rpx;
  padding: 12rpx 32rpx 20rpx;
  flex-shrink: 0;
}

.pp-panel-tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 28rpx;
  border-radius: 100rpx;
  background: var(--card-bg);
  border: 2rpx solid var(--line-strong);
  transition: all 0.2s ease;
}

.pp-panel-tab.pp-panel-tab-active {
  background: linear-gradient(135deg, var(--accent-soft) 0%, var(--accent-soft-2) 100%);
  border-color: var(--accent);
}

.pp-panel-tab-icon {
  font-size: 26rpx;
}

.pp-panel-tab-text {
  font-size: 26rpx;
  color: var(--text-muted);
  font-weight: 500;
}

.pp-panel-tab.pp-panel-tab-active .pp-panel-tab-text {
  color: var(--accent);
  font-weight: 600;
}

.pp-panel-content {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
}

.pp-filter-bar {
  white-space: nowrap;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.pp-filter-bar-inner {
  display: inline-flex;
  gap: 12rpx;
  padding: 4rpx 0;
}

.pp-filter-tag {
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  background: var(--card-bg);
  border: 1rpx solid var(--line-strong);
  flex-shrink: 0;
}

.pp-filter-tag.pp-filter-tag-active {
  background: var(--accent);
  border-color: var(--accent);
}

.pp-filter-tag-text {
  font-size: 24rpx;
  color: var(--text-muted);
  font-weight: 500;
}

.pp-filter-tag.pp-filter-tag-active .pp-filter-tag-text {
  color: var(--text-inverse);
}

.pp-recipe-scroll {
  flex: 1;
  min-height: 0;
  max-height: 50vh;
}

.pp-recipe-pick-list {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.pp-recipe-pick-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: var(--card-bg-strong);
  border-radius: 16rpx;
  margin-bottom: 8rpx;
  border: 1rpx solid var(--line);
  transition: background 0.15s ease;
}

.pp-recipe-pick-item:active {
  background: var(--accent-soft-2);
}

.pp-recipe-pick-info {
  flex: 1;
  min-width: 0;
}

.pp-recipe-pick-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text);
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pp-recipe-pick-meta {
  display: flex;
  gap: 8rpx;
}

.pp-recipe-pick-meta-tag {
  font-size: 20rpx;
  color: var(--text-subtle);
  padding: 2rpx 10rpx;
  border-radius: 100rpx;
  background: var(--line);
}

.pp-recipe-pick-meta-external {
  color: var(--accent-strong);
  background: var(--accent-soft-2);
}

.pp-recipe-pick-add {
  font-size: 40rpx;
  color: var(--accent);
  font-weight: 300;
  line-height: 1;
  flex-shrink: 0;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--accent-soft);
}

.pp-recipe-pick-empty {
  padding: 48rpx 0;
  text-align: center;
}

.pp-recipe-pick-empty-text {
  font-size: 26rpx;
  color: var(--text-subtle);
}

