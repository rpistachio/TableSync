/* 预览页：暖白底色，使用页面自然滚动 */
.preview-page {
  background-color: var(--bg);
  box-sizing: border-box;
}

.preview-page-scroll {
  width: 100%;
  box-sizing: border-box;
}

.preview-scroll-content {
  padding-bottom: 220rpx;
  box-sizing: border-box;
}


.preview-header {
  position: relative;
  padding: 44rpx 40rpx 24rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}

.preview-header-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 22rpx 24rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.preview-header-divider {
  margin-top: 18rpx;
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  width: 100%;
}

.preview-header-title {
  display: block;
  font-size: 24rpx;
  color: var(--text-muted);
  letter-spacing: 2rpx;
}

.preview-narrative {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-soft);
  line-height: 1.6;
}


/* 横向数字看板 */
.dashboard-bar {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  padding: 12rpx 28rpx;
  gap: 16rpx;
  margin: 0 32rpx 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.dash-item {
  display: flex;
  align-items: center;
  padding: 10rpx 16rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 14rpx;
  flex-shrink: 0;
}

.dash-value {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text);
}

/* 今日提示条 */
.preview-tips-bar {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 18rpx 24rpx;
  margin: 0 32rpx 16rpx;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.preview-tips-bar .tips-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.preview-tips-bar .tips-dot {
  font-size: 20rpx;
  color: var(--text-muted);
  line-height: 1.4;
}

.preview-tips-bar .tips-text {
  font-size: 24rpx;
  color: var(--text-soft);
  line-height: 1.5;
  flex: 1;
}

/* 主厨报告：AI 推荐理由 */
.preview-menu-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  margin: 0 32rpx 16rpx;
}

.preview-menu-label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
}

.preview-menu-titles {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.preview-menu-subtitle {
  font-size: 24rpx;
  color: var(--text-muted);
}

.preview-rhythm-inline {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-shrink: 0;
}

.preview-rhythm-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.preview-ring-svg-wrap {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.02);
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-ring-svg {
  width: 36rpx;
  height: 36rpx;
}

.preview-ring-track {
  fill: none;
  stroke: rgba(0, 0, 0, 0.08);
  stroke-width: 8;
}

.preview-ring-progress {
  fill: none;
  stroke-width: 8;
  stroke-linecap: round;
  transform: rotate(-90deg);
  transform-origin: 50% 50%;
}

.preview-ring-label {
  font-size: 22rpx;
  color: var(--text-muted);
  max-width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 宝宝餐说明：有宝宝时在菜单列表上方提示 */
.preview-baby-hint {
  margin: 0 32rpx 20rpx;
  padding: 14rpx 22rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 14rpx;
  font-size: 24rpx;
  color: var(--text-soft);
  line-height: 1.45;
}

/* 今日菜单列表 */
.preview-dish-list {
  padding: 0 32rpx 48rpx;
}

.dish-card-wrap {
  margin-bottom: 24rpx;
}

/* 瀑布流滑入动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 现代菜谱卡片：封面图 + 半透明渐变遮罩 */
.dish-card-modern {
  position: relative;
  height: 260rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
  animation: slideInUp 0.5s ease-out both;
}

.card-bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  object-fit: cover;
}

.card-overlay {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.35) 0%, transparent 62%);
}

.card-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 22rpx 24rpx;
  color: #fff;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.35;
  flex: 1;
  min-width: 0;
}

.check-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-footer {
  margin-top: 8rpx;
}

.dish-reason {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.4;
}

.baby-tag-floating {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.4;
}

/* 无封面图：温暖渐变背景 */
.dish-card-modern.no-cover {
  background: linear-gradient(135deg, #f3f1ec 0%, #e9e5dd 100%);
}

.dish-card-modern.no-cover .card-overlay {
  background: transparent;
}

.dish-card-modern.no-cover .card-info {
  color: #4a4540;
}

.dish-card-modern.no-cover .dish-name {
  color: #2f2f2f;
}

.dish-card-modern.no-cover .dish-reason,
.dish-card-modern.no-cover .baby-tag-floating {
  color: #6b6662;
}

/* 篮子来源徽标 */
.basket-origin-badge {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.82);
  border-radius: 100rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  z-index: 2;
}

.basket-origin-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--text);
  line-height: 1.2;
  white-space: nowrap;
}

.dish-card-modern.no-cover .basket-origin-badge {
  background: rgba(255, 255, 255, 0.9);
}

.dish-card-modern.no-cover .basket-origin-text {
  color: var(--text);
}

/* 未勾选：弱化显示 */
.dish-card-modern.is-unchecked {
  opacity: 0.72;
}

.dish-card-modern.is-unchecked .card-bg {
  filter: saturate(0.85) brightness(0.95);
}

.preview-actions {
  display: flex;
  gap: 16rpx;
  padding: 18rpx 24rpx;
  padding-bottom: calc(18rpx + env(safe-area-inset-bottom));
  background: rgba(248, 249, 250, 0.98);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.preview-btn {
  flex: 1;
  min-width: 0;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  border-radius: 20rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.preview-btn::after {
  border: none;
}

.preview-btn-secondary {
  color: #4f4a45;
  background: #f1ede8;
}

.preview-btn-ghost {
  color: var(--text-muted);
  background: transparent;
  border: 1rpx solid rgba(0, 0, 0, 0.12);
}

/* 全员入篮：极简不抢主按钮（spec 11.2） */
.preview-btn-basket {
  color: var(--text-soft);
  background: rgba(193, 102, 62, 0.08);
  border: 1rpx solid rgba(193, 102, 62, 0.2);
}

.preview-btn-primary {
  flex: 1.2;
  color: #fff;
  background: #c1663e;
}

.preview-btn:active {
  opacity: 0.9;
}

