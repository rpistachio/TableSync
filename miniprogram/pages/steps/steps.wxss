.steps-container {
  background-color: #fdf8f2;
  min-height: 100vh;
}

.steps-container.cook-mode {
  padding-bottom: 180rpx;
}

/* ========== Layer 1: 极简头部 ========== */
.cook-header {
  position: sticky;
  top: 0;
  z-index: 10;
  background: #fff;
  padding: 24rpx 32rpx 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.progress-bar-track {
  height: 8rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.06);
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #E8A87C, #D4956A);
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.header-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-counter {
  font-size: 28rpx;
  font-weight: 700;
  color: #E8A87C;
  letter-spacing: 2rpx;
}

.current-dish-name {
  font-size: 26rpx;
  color: #5a544f;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ========== Layer 2: 浮动并行状态条 ========== */
.parallel-float-bar {
  position: sticky;
  top: 100rpx;
  z-index: 9;
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  padding: 12rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.parallel-scroll {
  white-space: nowrap;
}

.parallel-chip-row {
  display: inline-flex;
  gap: 16rpx;
}

.parallel-chip {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(232, 168, 124, 0.12);
  border: 1rpx solid rgba(232, 168, 124, 0.25);
  flex-shrink: 0;
}

.chip-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #E8A87C;
  animation: chipPulse 2s ease-in-out infinite;
}

@keyframes chipPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.chip-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #4b3b33;
  white-space: nowrap;
}

.chip-time {
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.8);
  color: #b46535;
  white-space: nowrap;
}

/* ========== Layer 3: 聚焦步骤区 ========== */
.focus-area {
  padding: 24rpx 32rpx 0;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
}

/* --- 前后步骤 peek --- */
.step-peek {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.02);
  margin-bottom: 16rpx;
}

.step-peek.next {
  margin-bottom: 0;
  margin-top: 16rpx;
  opacity: 0.6;
}

.peek-check {
  font-size: 22rpx;
  color: #6cb58b;
  font-weight: 700;
}

.peek-label {
  font-size: 20rpx;
  color: #a09a94;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.peek-text {
  font-size: 26rpx;
  color: #8e857e;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* --- 聚焦卡片 --- */
.focus-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 36rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.06);
  flex: 1;
}

.focus-card.is-done {
  opacity: 0.5;
  filter: grayscale(0.6);
}

/* 阶段纤细标签 */
.phase-chip {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid transparent;
}

.phase-chip.prep {
  background: rgba(200, 230, 201, 0.5);
  color: #1b5e20;
  border-left-color: #4caf50;
}

.phase-chip.long_term {
  background: rgba(255, 224, 178, 0.5);
  color: #e65100;
  border-left-color: #ff9800;
}

.phase-chip.gap {
  background: rgba(187, 222, 251, 0.5);
  color: #0d47a1;
  border-left-color: #2196f3;
}

.phase-chip.cook {
  background: rgba(255, 204, 188, 0.5);
  color: #bf360c;
  border-left-color: #ff5722;
}

.phase-chip.finish {
  background: rgba(209, 196, 233, 0.5);
  color: #311b92;
  border-left-color: #673ab7;
}

.focus-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

/* 并行提示（内联） */
.focus-parallel-hint {
  display: inline-flex;
  align-items: center;
  gap: 14rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(232, 168, 124, 0.14);
  border: 1rpx solid rgba(232, 168, 124, 0.2);
  margin-bottom: 24rpx;
}

.parallel-hint-text {
  font-size: 24rpx;
  color: #4b3b33;
}

.parallel-hint-timer {
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.75);
  color: #b46535;
}

/* 指令正文 - 大字号 */
.focus-body {
  margin-bottom: 24rpx;
}

.focus-line {
  margin-bottom: 20rpx;
}

.focus-line:last-child {
  margin-bottom: 0;
}

.focus-line-text {
  display: inline;
  white-space: pre-wrap;
  font-size: 32rpx;
  line-height: 1.85;
  color: #555;
}

/* 宝宝分拨动作高亮 */
.focus-line.baby-portion-action {
  background: linear-gradient(90deg, rgba(255, 193, 153, 0.3) 0%, rgba(255, 228, 225, 0.15) 100%);
  border-left: 6rpx solid #e8a87c;
  padding: 16rpx 20rpx 16rpx 28rpx;
  margin: 0 -36rpx 20rpx;
  padding-left: 42rpx;
  border-radius: 0 16rpx 16rpx 0;
}

/* 调料横滚 */
.focus-seasonings {
  margin: 16rpx 0 20rpx;
}

.seasoning-scroll {
  white-space: nowrap;
}

.seasoning-row {
  display: inline-flex;
  gap: 12rpx;
}

.ing-tag {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.ing-tag .n {
  font-size: 24rpx;
  color: #5a544f;
  white-space: nowrap;
}

.ing-tag .a {
  font-size: 24rpx;
  font-weight: 700;
  color: #E8A87C;
  white-space: nowrap;
}

/* 时长提示 */
.focus-duration {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.duration-icon {
  font-size: 24rpx;
}

.duration-text {
  font-size: 24rpx;
  color: #8e857e;
}

/* ========== 底部操作栏 ========== */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: rgba(253, 248, 242, 0.95);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  z-index: 20;
}

.action-prev {
  padding: 0 24rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.action-prev.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.action-prev-text {
  font-size: 28rpx;
  color: #5a544f;
  font-weight: 500;
}

.action-main {
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  background: #2d2d2d;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  line-height: 88rpx;
}

.action-main.is-done {
  background: #6cb58b;
}

.action-main-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}

.action-list {
  padding: 0 20rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.action-list-icon {
  font-size: 40rpx;
  color: #5a544f;
}

/* ========== Bottom Sheet 通用 ========== */
.sheet-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 90;
}

.bottom-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 70vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 100;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.bottom-sheet.is-open {
  transform: translateY(0);
}

.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.sheet-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.sheet-close {
  font-size: 26rpx;
  color: #8e857e;
  padding: 8rpx 16rpx;
}

.sheet-scroll {
  flex: 1;
  padding: 16rpx 32rpx;
  max-height: 50vh;
}

.sheet-footer {
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.sheet-share-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  background: #2d2d2d;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

/* --- 步骤列表 Sheet 内容 --- */
.sheet-step-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.sheet-step-item:last-child {
  border-bottom: none;
}

.sheet-step-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.sheet-step-item.is-completed .sheet-step-check {
  background: #6cb58b;
}

.sheet-step-item.is-current .sheet-step-check {
  background: #E8A87C;
}

.sheet-check-icon {
  font-size: 22rpx;
  color: #8e857e;
  font-weight: 600;
}

.sheet-step-item.is-completed .sheet-check-icon {
  color: #fff;
}

.sheet-step-item.is-current .sheet-check-icon {
  color: #fff;
}

.sheet-step-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sheet-step-title {
  font-size: 26rpx;
  color: #2d2d2d;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sheet-step-item.is-completed .sheet-step-title {
  color: #a09a94;
  text-decoration: line-through;
}

.sheet-step-meta {
  font-size: 22rpx;
  color: #8e857e;
  flex-shrink: 0;
}

/* --- 甘特图 Sheet --- */
.gantt-section {
  padding: 8rpx 0;
}

.gantt-task-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
}

.gantt-task-name {
  font-size: 26rpx;
  color: #5a544f;
  width: 160rpx;
  flex-shrink: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gantt-bar-track {
  flex: 1;
  height: 16rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.gantt-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #E8A87C, #f7c28a);
  transition: width 0.4s ease;
}

.gantt-task-time {
  font-size: 24rpx;
  font-weight: 700;
  color: #b46535;
  width: 60rpx;
  text-align: right;
  flex-shrink: 0;
}

.gantt-empty {
  padding: 48rpx 0;
  text-align: center;
}

.gantt-empty-text {
  font-size: 26rpx;
  color: #a09a94;
}
