.steps-container {
  background: linear-gradient(180deg, rgba(232, 168, 124, 0.08) 0%, var(--bg) 18%);
  background-color: var(--bg);
  min-height: 100vh;
}

/* helper 模式：暖黄氛围渐变（与 preview-page-helper 呼应） */
.steps-container.helper-role {
  background: linear-gradient(180deg, rgba(253, 248, 236, 0.4) 0%, var(--bg) 20%);
}

/* helper 模式下阶段标签与并行提示与暖色氛围协调 */
.steps-container.helper-role .phase-chip {
  margin-top: 4rpx;
}
.steps-container.helper-role .focus-parallel-hint {
  background: rgba(253, 248, 236, 0.95);
  border-color: rgba(193, 102, 62, 0.22);
}

.steps-container.cook-mode {
  padding-bottom: 180rpx;
}

/* ========== 执行者模式：顶部标题 + 折叠食材 ========== */
.helper-role-header {
  position: relative;
  min-height: 360rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  background: linear-gradient(135deg, #fdf8ec 0%, #faf0d8 100%);
  padding: 48rpx 32rpx 32rpx;
  border-bottom: none;
  overflow: hidden;
}

/* 右上角装饰光圈（无背景图时的兜底装饰） */
.helper-role-header::after {
  content: '';
  position: absolute;
  top: -60rpx;
  right: -40rpx;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(232, 168, 124, 0.15) 0%, rgba(232, 168, 124, 0.04) 60%, transparent 70%);
  pointer-events: none;
  z-index: 1;
}

/* 方案5：helper 模式 header 背景插画三层结构 */
.helper-header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  max-height: none;
  z-index: 1;
  object-fit: cover;
  filter: brightness(0.95);
}

.helper-header-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: linear-gradient(to top,
    rgba(253, 248, 236, 0.95) 0%,
    rgba(253, 248, 236, 0.75) 40%,
    rgba(253, 248, 236, 0.3) 70%,
    transparent 100%
  );
}

.helper-header-content {
  position: relative;
  z-index: 3;
}

/* 有背景图时，让装饰光圈隐去（被遮罩覆盖即可） */

.helper-role-title {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  color: #2d2d2d;
  line-height: 1.45;
  margin-bottom: 24rpx;
}

.helper-ingredients-panel {
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.helper-ingredients-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.helper-ingredients-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #8e857e;
  letter-spacing: 2rpx;
}

.helper-ingredients-toggle {
  font-size: 24rpx;
  color: var(--accent);
}

.helper-ingredients-list {
  padding: 0 24rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 24rpx;
}

.helper-ingredient-item {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  padding: 10rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.helper-ingredient-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}

.helper-ingredient-amount {
  font-size: 22rpx;
  color: #8e857e;
}

/* ========== 自己做模式：氛围 hero + 背景插画 ========== */
.self-cook-hero {
  position: relative;
  height: 45vh;                /* 展开态：固定高度，保证背景图充分展示 */
  max-height: 45vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  background: linear-gradient(135deg, rgba(232, 168, 124, 0.1) 0%, rgba(232, 74, 39, 0.04) 100%);
  overflow: hidden;
  transition: height 0.65s cubic-bezier(0.4, 0, 0.2, 1),
              max-height 0.65s cubic-bezier(0.4, 0, 0.2, 1);
}
/* 折叠态 */
.self-cook-hero.is-collapsed {
  height: 160rpx;
  max-height: 160rpx;
}

.self-cook-hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  max-height: none;
  z-index: 1;
  object-fit: cover;
  filter: brightness(0.95);
}

.self-cook-hero-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: linear-gradient(to top,
    var(--bg) 0%,
    rgba(253, 249, 239, 0.85) 35%,
    rgba(253, 249, 239, 0.3) 65%,
    transparent 100%
  );
}

.self-cook-hero-content {
  position: relative;
  z-index: 3;
  padding: 48rpx 32rpx 36rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  transition: opacity 0.45s ease;
}

/* 折叠后内容渐隐 */
.self-cook-hero.is-collapsed .self-cook-hero-content {
  opacity: 0;
  pointer-events: none;
}

.self-cook-greeting {
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: var(--text-subtle);
  text-transform: uppercase;
}

.self-cook-dishes {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text);
  line-height: 1.4;
}

.self-cook-encourage {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 4rpx;
}

/* ========== Layer 1: 极简头部 ========== */
.cook-header {
  position: sticky;
  top: 0;
  z-index: 10;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98) 0%, rgba(253, 249, 239, 0.95) 100%);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  padding: 24rpx 32rpx 20rpx;
  border-bottom: 1rpx solid var(--line);
}

.progress-bar-track {
  height: 8rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.06);
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #E8A87C, #D4956A);
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.header-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-counter {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--accent);
  letter-spacing: 2rpx;
}

.current-dish-name {
  font-size: 26rpx;
  color: var(--text-soft);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 顶部节拍进度环 */
.rhythm-ring-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 18rpx;
  padding-right: 24rpx;
  white-space: nowrap;
}

.rhythm-ring {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  padding: 8rpx;
  background: conic-gradient(var(--ring-accent, var(--accent)) 0% var(--ring-pct, 0%), rgba(0, 0, 0, 0.08) var(--ring-pct, 0%) 100%);
  box-shadow: inset 0 0 0 1rpx rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.rhythm-ring.is-active {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 24rpx rgba(232, 74, 39, 0.2);
}

.rhythm-ring.is-pulsing {
  animation: ringPulse 2.2s ease-in-out infinite;
}

@keyframes ringPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.03); }
}

.rhythm-ring .ring-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: var(--card-bg-strong);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 8rpx;
  box-sizing: border-box;
}

.rhythm-ring .ring-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text);
}

.rhythm-ring .ring-label {
  font-size: 20rpx;
  color: var(--text-muted);
  margin-top: 6rpx;
  line-height: 1.3;
}

.rhythm-ring.accent-0 { --ring-accent: var(--accent); }
.rhythm-ring.accent-1 { --ring-accent: #d4956a; }
.rhythm-ring.accent-2 { --ring-accent: #6cb58b; }
.rhythm-ring.accent-3 { --ring-accent: #7ba0c9; }
.rhythm-ring.accent-4 { --ring-accent: #b07db8; }
.rhythm-ring.accent-5 { --ring-accent: #c9a355; }

/* ========== Layer 2: 浮动并行状态条 ========== */
.parallel-float-bar {
  position: sticky;
  top: 100rpx;
  z-index: 9;
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  padding: 12rpx 24rpx;
  border-bottom: 1rpx solid var(--line);
}

.parallel-scroll {
  white-space: nowrap;
}

.parallel-chip-row {
  display: inline-flex;
  gap: 16rpx;
}

.parallel-chip {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  background: var(--accent-soft);
  border: 1rpx solid var(--accent-border);
  flex-shrink: 0;
}

.chip-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--accent);
  animation: chipPulse 2s ease-in-out infinite;
}

@keyframes chipPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.chip-name {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-soft);
  white-space: nowrap;
}

.chip-time {
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.8);
  color: var(--accent-strong);
  white-space: nowrap;
}

/* ========== Layer 3: 聚焦步骤区 ========== */
.focus-area {
  padding: 24rpx 32rpx 0;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 淡淡的暖色装饰光晕 */
.focus-area::before {
  content: '';
  position: absolute;
  top: 18%;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 320rpx;
  border-radius: 50%;
  background: radial-gradient(ellipse, rgba(232, 168, 124, 0.06) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

/* --- 前后步骤 peek --- */
.step-peek {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.02);
  margin-bottom: 16rpx;
}

.step-peek.next {
  margin-bottom: 0;
  margin-top: 16rpx;
  opacity: 0.6;
}

.peek-check {
  font-size: 22rpx;
  color: #6cb58b;
  font-weight: 700;
}

.peek-label {
  font-size: 20rpx;
  color: #a09a94;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.peek-text {
  font-size: 26rpx;
  color: #8e857e;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* --- 里程碑过渡卡片（备菜完成 → 正式开火） --- */
.milestone-card {
  position: relative;
  z-index: 1;
  background: linear-gradient(180deg, rgba(255, 252, 247, 0.98) 0%, rgba(249, 243, 236, 0.96) 100%);
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  border: 1rpx solid var(--accent-soft);
  box-shadow: 0 18rpx 54rpx rgba(74, 69, 64, 0.14);
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 320rpx;
}

.milestone-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #5a544f;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

.milestone-desc {
  font-size: 28rpx;
  color: #8e857e;
  margin-bottom: 48rpx;
}

.milestone-action {
  padding: 24rpx 56rpx;
  background: linear-gradient(135deg, #e8a87c 0%, #d4956a 100%);
  border-radius: 999rpx;
  box-shadow: 0 8rpx 24rpx rgba(232, 168, 124, 0.35);
}

.milestone-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}

.milestone-card.is-done {
  opacity: 0.5;
  filter: grayscale(0.6);
}

/* --- 聚焦卡片 --- */
.focus-card {
  position: relative;
  z-index: 1;
  background: linear-gradient(180deg, rgba(255, 252, 247, 0.98) 0%, rgba(249, 243, 236, 0.96) 100%);
  border-radius: 32rpx;
  padding: 40rpx 36rpx;
  border: 1rpx solid var(--accent-soft);
  box-shadow: 0 18rpx 54rpx rgba(74, 69, 64, 0.14);
  flex: 1;
}

.focus-card.is-done {
  opacity: 0.5;
  filter: grayscale(0.6);
}

/* 阶段纤细标签 */
.phase-chip {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid transparent;
}

.phase-chip.prep {
  background: rgba(200, 230, 201, 0.5);
  color: #1b5e20;
  border-left-color: #4caf50;
}

.phase-chip.long_term {
  background: rgba(255, 224, 178, 0.5);
  color: #e65100;
  border-left-color: #ff9800;
}

.phase-chip.gap {
  background: rgba(187, 222, 251, 0.5);
  color: #0d47a1;
  border-left-color: #2196f3;
}

.phase-chip.cook {
  background: rgba(255, 204, 188, 0.5);
  color: #bf360c;
  border-left-color: #ff5722;
}

.phase-chip.finish {
  background: rgba(209, 196, 233, 0.5);
  color: #311b92;
  border-left-color: #673ab7;
}

.phase-chip.clean_gap {
  background: rgba(200, 230, 201, 0.6);
  color: #2e7d32;
  border-left-color: #66bb6a;
}

.device-chip {
  display: inline-block;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
  margin-left: 12rpx;
}

.device-chip-airfryer {
  background: rgba(76, 175, 80, 0.2);
  color: #2e7d32;
  border: 1rpx solid rgba(76, 175, 80, 0.4);
}

.focus-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 20rpx;
  line-height: 1.45;
}

/* 次动作提示 */
.focus-secondary {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  background: var(--accent-soft-2);
  border: 1rpx dashed var(--accent-soft);
  margin-bottom: 20rpx;
}

.secondary-label {
  font-size: 22rpx;
  color: #a07050;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.secondary-text {
  font-size: 24rpx;
  color: var(--text-soft);
  flex: 1;
}

/* 并行提示（内联） */
.focus-parallel-hint {
  display: inline-flex;
  align-items: center;
  gap: 14rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: var(--accent-soft);
  border: 1rpx solid var(--accent-border);
  margin-bottom: 24rpx;
}

.parallel-hint-text {
  font-size: 24rpx;
  color: var(--text-soft);
}

.parallel-hint-timer {
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.75);
  color: var(--accent-strong);
}

/* 指令正文 */
.focus-body {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.focus-line {
  padding: 14rpx 0 14rpx 24rpx;
  border-left: 4rpx solid rgba(232, 168, 124, 0.25);
  border-radius: 0 8rpx 8rpx 0;
  background: rgba(0, 0, 0, 0.01);
}

.focus-line:last-child {
  margin-bottom: 0;
}

.focus-line-text {
  display: inline;
  white-space: pre-wrap;
  font-size: 28rpx;
  line-height: 1.75;
  color: var(--text-soft);
  letter-spacing: 0.5rpx;
}

/* 宝宝分拨动作高亮 */
.focus-line.baby-portion-action {
  background: linear-gradient(90deg, rgba(212, 149, 106, 0.28) 0%, rgba(212, 149, 106, 0.12) 100%);
  border-left: 6rpx solid var(--accent);
  padding: 16rpx 20rpx 16rpx 28rpx;
  margin: 0 -36rpx 20rpx;
  padding-left: 42rpx;
  border-radius: 0 16rpx 16rpx 0;
}

/* 调料横滚 */
.focus-seasonings {
  margin: 16rpx 0 20rpx;
}

.seasoning-scroll {
  white-space: nowrap;
}

.seasoning-row {
  display: inline-flex;
  gap: 12rpx;
}

.ing-tag {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.ing-tag .n {
  font-size: 24rpx;
  color: #5a544f;
  white-space: nowrap;
}

.ing-tag .a {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--accent);
  white-space: nowrap;
}

/* 时长提示 */
.focus-duration {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.duration-icon {
  font-size: 24rpx;
}

.duration-text {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 云端步骤缺失时：重新加载区域 */
.offline-reload-area {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--line);
}
.offline-reload-btn {
  font-size: 28rpx;
  color: var(--accent);
  background: var(--accent-soft);
  border: 1rpx solid var(--accent);
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
}
.offline-reload-loading {
  font-size: 26rpx;
  color: var(--text-muted);
}
.offline-reload-error {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #c62828;
}

/* 底部流水线预览 */
.pipeline-preview {
  padding: 16rpx 32rpx 24rpx;
}

.pipeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.pipeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.pipeline-sub {
  font-size: 22rpx;
  color: var(--text-muted);
}

.pipeline-scroll {
  white-space: nowrap;
}

.pipeline-row {
  display: inline-flex;
  gap: 14rpx;
}

.pipeline-block {
  position: relative;
  min-width: 120rpx;
  padding: 16rpx 14rpx 20rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.pipeline-block.is-current {
  background: var(--accent-soft);
  border-color: var(--accent-border);
}

.pipeline-block.is-completed {
  opacity: 0.7;
}

.pipeline-label {
  font-size: 22rpx;
  color: var(--text-soft);
  text-align: center;
}

.pipeline-sticker {
  position: absolute;
  top: -10rpx;
  right: -8rpx;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  color: #fff;
  background: #6cb58b;
  border-radius: 999rpx;
  transform: rotate(6deg);
}

/* ========== 底部操作栏 ========== */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: rgba(253, 248, 242, 0.95);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  z-index: 20;
}

.action-prev {
  padding: 0 24rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.action-prev.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.action-prev-text {
  font-size: 28rpx;
  color: var(--text-soft);
  font-weight: 500;
}

.action-main {
  flex: 1;
  min-width: 0;
  height: 88rpx;
  border-radius: 24rpx;
  background: var(--text);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0 16rpx;
  line-height: 88rpx;
  overflow: hidden;
}

.action-main.is-done {
  background: #6cb58b;
}

.action-main-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-inverse);
  letter-spacing: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action-delay {
  min-width: 140rpx;
  height: 88rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: rgba(232, 168, 124, 0.2);
  border: 1rpx solid rgba(232, 168, 124, 0.4);
}

.action-delay-text {
  font-size: 24rpx;
  color: var(--accent);
  font-weight: 500;
}

.action-gantt {
  padding: 0 16rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.action-gantt-icon {
  font-size: 36rpx;
  color: var(--accent);
}

.action-list {
  padding: 0 20rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.action-list-icon {
  font-size: 40rpx;
  color: var(--text-soft);
}

/* ========== Bottom Sheet 通用 ========== */
.sheet-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 90;
}

.bottom-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 70vh;
  background: var(--card-bg-strong);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 100;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.bottom-sheet.is-open {
  transform: translateY(0);
}

.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx 20rpx;
  border-bottom: 1rpx solid var(--line);
  flex-shrink: 0;
}

.sheet-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.sheet-close {
  font-size: 26rpx;
  color: var(--text-muted);
  padding: 8rpx 16rpx;
}

.sheet-scroll {
  flex: 1;
  padding: 16rpx 32rpx;
  max-height: 50vh;
}

.sheet-footer {
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--line);
  flex-shrink: 0;
}

.sheet-share-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  background: var(--text);
  color: var(--text-inverse);
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

/* --- 步骤列表 Sheet 内容 --- */
.sheet-step-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--line);
}

.sheet-step-item:last-child {
  border-bottom: none;
}

.sheet-step-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.sheet-step-item.is-completed .sheet-step-check {
  background: #6cb58b;
}

.sheet-step-item.is-current .sheet-step-check {
  background: var(--accent);
}

.sheet-check-icon {
  font-size: 22rpx;
  color: var(--text-muted);
  font-weight: 600;
}

.sheet-step-item.is-completed .sheet-check-icon {
  color: #fff;
}

.sheet-step-item.is-current .sheet-check-icon {
  color: #fff;
}

.sheet-step-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sheet-step-title {
  font-size: 26rpx;
  color: var(--text);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sheet-step-item.is-completed .sheet-step-title {
  color: var(--text-subtle);
  text-decoration: line-through;
}

.sheet-step-meta {
  font-size: 22rpx;
  color: var(--text-muted);
  flex-shrink: 0;
}

/* --- 甘特图 Sheet：横向泳道图 --- */
.gantt-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.gantt-stats-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
}

.gantt-stats-saved {
  font-size: 24rpx;
  color: var(--accent);
}

.gantt-timeline-wrap {
  margin-bottom: 16rpx;
}

.gantt-time-ruler {
  display: flex;
  justify-content: space-between;
  padding: 0 0 8rpx 120rpx;
  font-size: 20rpx;
  color: var(--text-muted);
}

.gantt-time-tick {
  flex-shrink: 0;
}

.gantt-lanes-scroll {
  width: 100%;
  white-space: nowrap;
}

.gantt-lanes-inner {
  padding-right: 32rpx;
}

.gantt-lane {
  display: flex;
  align-items: center;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.gantt-lane-label {
  width: 120rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.gantt-lane-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.gantt-lane-name {
  font-size: 22rpx;
  color: var(--text-soft);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gantt-lane-bars {
  flex: 1;
  position: relative;
  height: 48rpx;
  min-width: 200rpx;
}

.gantt-bar {
  position: absolute;
  top: 8rpx;
  height: 32rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.gantt-bar-name {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.95);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gantt-bar-check {
  margin-left: 4rpx;
  font-size: 20rpx;
  color: #fff;
  flex-shrink: 0;
}

.gantt-bar-current {
  box-shadow: 0 0 0 3rpx var(--accent);
  animation: gantt-bar-pulse 1.2s ease-in-out infinite;
}

.gantt-bar-done {
  opacity: 0.75;
}

@keyframes gantt-bar-pulse {
  0%, 100% { box-shadow: 0 0 0 3rpx var(--accent); }
  50% { box-shadow: 0 0 0 6rpx var(--accent); }
}

/* --- 甘特图降级：按菜品分组列表 --- */
.gantt-section {
  padding: 8rpx 0;
}

.gantt-recipe-group {
  margin-bottom: 28rpx;
}

.gantt-recipe-group:last-child {
  margin-bottom: 8rpx;
}

.gantt-recipe-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.gantt-recipe-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gantt-recipe-progress {
  font-size: 22rpx;
  color: var(--accent);
  font-weight: 600;
  flex-shrink: 0;
}

.gantt-recipe-time {
  font-size: 22rpx;
  color: var(--text-muted);
  flex-shrink: 0;
}

.gantt-bar-track {
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  overflow: hidden;
  margin-bottom: 12rpx;
}

.gantt-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, var(--accent), #f7c28a);
  transition: width 0.4s ease;
}

.gantt-step-list {
  padding-left: 8rpx;
}

.gantt-step-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 0;
}

.gantt-step-dot {
  font-size: 22rpx;
  color: var(--text-muted);
  width: 32rpx;
  text-align: center;
  flex-shrink: 0;
}

.gantt-step-item.is-done .gantt-step-dot {
  color: #6cb58b;
}

.gantt-step-item.is-current .gantt-step-dot {
  color: var(--accent);
}

.gantt-step-title {
  font-size: 24rpx;
  color: var(--text-soft);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gantt-step-item.is-done .gantt-step-title {
  color: var(--text-subtle);
  text-decoration: line-through;
}

.gantt-step-item.is-current .gantt-step-title {
  color: var(--text);
  font-weight: 600;
}

.gantt-step-dur {
  font-size: 22rpx;
  color: var(--text-muted);
  flex-shrink: 0;
}

/* --- 并行实时状态区 --- */
.gantt-parallel-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--line);
}

.gantt-parallel-title {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--accent);
  margin-bottom: 12rpx;
}

.gantt-task-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx 0;
}

.gantt-task-name {
  font-size: 26rpx;
  color: var(--text-soft);
  width: 160rpx;
  flex-shrink: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gantt-task-time {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--accent-strong);
  width: 60rpx;
  text-align: right;
  flex-shrink: 0;
}

.gantt-empty {
  padding: 48rpx 0;
  text-align: center;
}

.gantt-empty-text {
  font-size: 26rpx;
  color: var(--text-subtle);
}

/* ========== 阿姨模式：大字只读 ========== */
.cook-mode.ayi-mode .focus-title {
  font-size: 44rpx;
}

.cook-mode.ayi-mode .focus-line-text {
  font-size: 36rpx;
  line-height: 1.8;
}

.cook-mode.ayi-mode .action-main {
  height: 120rpx;
  font-size: 32rpx;
  line-height: 120rpx;
}

.cook-mode.ayi-mode .action-main-text {
  font-size: 32rpx;
  letter-spacing: 1rpx;
}

/* ============ 做完饭后隐式反馈 ============ */

.postcook-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.postcook-card {
  width: 560rpx;
  background: linear-gradient(170deg, #FFFDF8 0%, #F8F4EE 100%);
  border-radius: 20rpx;
  padding: 48rpx 40rpx 40rpx;
  text-align: center;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.12);
  opacity: 0;
  transform: translateY(30rpx) scale(0.95);
  transition: opacity 0.4s ease-out, transform 0.4s ease-out;
}

.postcook-card.postcook-fade-in {
  opacity: 1;
  transform: translateY(0) scale(1);
}

.postcook-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #3A3D40;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.postcook-subtitle {
  display: block;
  font-size: 24rpx;
  color: #A69482;
  margin-bottom: 40rpx;
}

.postcook-options {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.postcook-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  background: rgba(249, 248, 244, 0.9);
  border: 2rpx solid rgba(166, 148, 130, 0.2);
  transition: background 0.2s ease, border-color 0.2s ease;
  min-width: 130rpx;
}

.postcook-option:active {
  background: rgba(158, 62, 50, 0.08);
  border-color: rgba(158, 62, 50, 0.3);
}

.postcook-option-icon {
  font-size: 48rpx;
  line-height: 1;
}

.postcook-option-label {
  font-size: 24rpx;
  color: #5A544F;
  font-weight: 500;
}
