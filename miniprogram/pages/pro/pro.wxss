/* TableSync Pro 落地页 - 侘寂风深色美学 */
.pro-page {
  --pro-bg: #1a1a1f;
  --pro-bg-card: rgba(255, 255, 255, 0.04);
  --pro-gold: #b8976a;
  --pro-gold-soft: rgba(184, 151, 106, 0.15);
  --pro-text: rgba(255, 255, 255, 0.92);
  --pro-text-soft: rgba(255, 255, 255, 0.6);
  min-height: 100vh;
  background: var(--pro-bg);
  box-sizing: border-box;
}

.pro-scroll {
  height: 100vh;
  box-sizing: border-box;
}

/* 自定义导航栏 */
.pro-nav {
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: var(--pro-bg);
}

.pro-nav-inner {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
}

.pro-nav-back {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pro-nav-back-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: var(--pro-text-soft);
  line-height: 1;
}

.pro-nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--pro-gold);
  letter-spacing: 2rpx;
}

/* Hero Section */
.pro-hero {
  padding: 48rpx 40rpx 56rpx;
  text-align: center;
}

.pro-hero-badge {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 32rpx;
  border-radius: 50%;
  background: var(--pro-gold-soft);
  border: 2rpx solid rgba(184, 151, 106, 0.4);
  animation: pro-glow 2s ease-in-out infinite;
}

@keyframes pro-glow {
  0%, 100% {
    box-shadow: 0 0 24rpx rgba(184, 151, 106, 0.25), 0 0 48rpx rgba(184, 151, 106, 0.1);
  }
  50% {
    box-shadow: 0 0 36rpx rgba(184, 151, 106, 0.4), 0 0 72rpx rgba(184, 151, 106, 0.15);
  }
}

.pro-hero-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--pro-text);
  line-height: 1.45;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
}

.pro-hero-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--pro-text-soft);
  line-height: 1.5;
  padding: 0 24rpx;
}

/* 区块标题 */
.pro-section {
  padding: 0 32rpx 32rpx;
}

.pro-section-label {
  display: block;
  font-size: 24rpx;
  color: var(--pro-text-soft);
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
}

/* 特权横滑 */
.pro-privilege-scroll {
  white-space: nowrap;
  margin: 0 -32rpx;
  padding: 0 32rpx;
}

.pro-privilege-list {
  display: inline-flex;
  gap: 24rpx;
  padding: 8rpx 0;
}

.pro-privilege-card {
  display: inline-flex;
  flex-direction: column;
  width: 520rpx;
  padding: 28rpx 24rpx;
  background: var(--pro-bg-card);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  flex-shrink: 0;
  white-space: normal;
}

.pro-privilege-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.pro-privilege-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--pro-gold);
  margin-bottom: 12rpx;
  line-height: 1.35;
}

.pro-privilege-desc {
  font-size: 24rpx;
  color: var(--pro-text-soft);
  line-height: 1.55;
}

/* 定价区 */
.pro-pricing-section {
  padding-bottom: 40rpx;
}

.pro-pricing-cards {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.pro-pricing-card {
  flex: 1;
  min-width: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 28rpx 16rpx 20rpx;
  background: var(--pro-bg-card);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.06);
  transition: border-color 0.2s ease, background 0.2s ease;
}

.pro-pricing-card.is-selected {
  border-color: var(--pro-gold);
  background: rgba(184, 151, 106, 0.08);
}

.pro-pricing-popular-tag {
  position: absolute;
  top: -1rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx;
  color: #1a1a1f;
  font-weight: 500;
  padding: 2rpx 12rpx;
  background: var(--pro-gold);
  border-radius: 0 0 8rpx 8rpx;
  white-space: nowrap;
}

.pro-pricing-name {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--pro-text);
  margin-bottom: 12rpx;
  line-height: 1.35;
}

.pro-pricing-price-row {
  display: flex;
  align-items: baseline;
  gap: 2rpx;
  margin-bottom: 4rpx;
  flex-wrap: wrap;
}

.pro-pricing-price {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--pro-gold);
}

.pro-pricing-unit {
  font-size: 20rpx;
  color: var(--pro-text-soft);
}

.pro-pricing-subnote {
  display: block;
  font-size: 20rpx;
  color: var(--pro-gold);
  margin-top: 2rpx;
  margin-bottom: 4rpx;
  opacity: 0.8;
}

.pro-pricing-desc {
  display: block;
  font-size: 20rpx;
  color: var(--pro-text-soft);
  line-height: 1.45;
  margin-top: 8rpx;
}

/* 底部留白 */
.pro-bottom-spacer {
  height: 160rpx;
}

/* 固定 CTA */
.pro-cta-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, var(--pro-bg) 60%, rgba(26, 26, 31, 0.95));
}

.pro-cta-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1f;
  background: linear-gradient(135deg, #c9a86c 0%, #b8976a 50%, #a6865a 100%);
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(184, 151, 106, 0.25);
}

.pro-cta-btn:active {
  opacity: 0.92;
}
