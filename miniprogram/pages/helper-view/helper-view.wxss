.helper-view-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f2ed;
}

.helper-view-scroll {
  flex: 1;
  height: 100vh;
}

.helper-view-card-wrap {
  padding: 24rpx 24rpx 140rpx;
}

.helper-view-placeholder {
  padding: 120rpx 48rpx;
  text-align: center;
}

.helper-view-placeholder-text {
  font-size: 28rpx;
  color: #8e857e;
}

.helper-view-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, #f5f2ed 60%, transparent);
}

.helper-view-btn-primary {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: #c1663e;
  border-radius: 48rpx;
  border: none;
}

.helper-view-btn-primary::after {
  border: none;
}
