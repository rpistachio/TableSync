/* pages/basketPreview/basketPreview.wxss */
/* 灵感篮子管理页 */

.basket-container {
  min-height: 100vh;
  background: #FDFCFA;
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-sizing: border-box;
}

.basket-header {
  padding: 48rpx 0 32rpx;
  text-align: center;
}

.basket-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2d2d2d;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.basket-subtitle {
  display: block;
  font-size: 26rpx;
  color: #a09a94;
  letter-spacing: 1rpx;
  line-height: 1.5;
}

/* 统计条 */
.basket-stats {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 24rpx 0;
  margin-bottom: 8rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 28rpx;
  background: rgba(193, 102, 62, 0.08);
  border-radius: 16rpx;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #c1663e;
}

.stat-label {
  font-size: 22rpx;
  color: #8e857e;
}

/* 排序控件 */
.sort-bar {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  padding: 12rpx 0 20rpx;
}

.sort-chip {
  padding: 10rpx 24rpx;
  border-radius: 100rpx;
  background: #FAF7F4;
  border: 1rpx solid #E8E4E0;
  transition: all 0.2s ease;
}

.sort-chip:active {
  transform: scale(0.96);
}

.sort-chip.is-active {
  background: #c1663e;
  border-color: #c1663e;
}

.sort-chip-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #8e857e;
}

.sort-chip.is-active .sort-chip-text {
  color: #fff;
}

/* 空状态 */
.basket-empty {
  padding: 60rpx 16rpx;
  text-align: center;
}

.basket-empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.basket-empty-text {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #5a544f;
  margin-bottom: 12rpx;
}

.basket-empty-hint {
  display: block;
  font-size: 26rpx;
  color: #a09a94;
  margin-bottom: 32rpx;
}

.basket-empty-ways {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  text-align: left;
}

.basket-way-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 24rpx;
  background: #FAF7F4;
  border-radius: 20rpx;
  border: 1rpx solid #E8E4E0;
  transition: all 0.2s ease;
}

.basket-way-item:active {
  transform: scale(0.98);
  background: rgba(232, 168, 124, 0.1);
  border-color: rgba(232, 168, 124, 0.3);
}

.basket-way-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.basket-way-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.basket-way-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
}

.basket-way-sub {
  font-size: 22rpx;
  color: #a09a94;
}

.basket-way-arrow {
  font-size: 32rpx;
  color: #c4bfb9;
  flex-shrink: 0;
  font-weight: 300;
}

/* 篮子列表 */
.basket-list {
  padding-bottom: 16rpx;
}

.basket-item {
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 1rpx solid #F0EDE8;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s ease;
}

.basket-item.is-high {
  border-color: rgba(193, 102, 62, 0.3);
  background: linear-gradient(135deg, rgba(193, 102, 62, 0.06) 0%, #fff 100%);
}

.basket-item-main {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx 24rpx 28rpx;
}

.basket-item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.basket-item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.basket-item-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.basket-item-source {
  font-size: 22rpx;
  color: #8e857e;
  padding: 2rpx 14rpx;
  background: #FAF7F4;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
}

.basket-item-priority {
  font-size: 20rpx;
  font-weight: 600;
  color: #c1663e;
  padding: 2rpx 14rpx;
  background: rgba(193, 102, 62, 0.1);
  border-radius: 100rpx;
}

.basket-item-time {
  font-size: 22rpx;
  color: #c4bfb9;
}

/* 操作按钮组 */
.basket-item-actions {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
  margin-left: 12rpx;
}

/* 优先级切换按钮 */
.basket-item-priority-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f2ef;
  transition: all 0.2s ease;
}

.basket-item-priority-btn:active {
  transform: scale(0.9);
}

.basket-item-priority-btn.is-high {
  background: rgba(193, 102, 62, 0.15);
}

.priority-btn-icon {
  font-size: 24rpx;
  line-height: 1;
}

.basket-item-priority-btn.is-high .priority-btn-icon {
  font-size: 22rpx;
}

/* 删除按钮 */
.basket-item-remove {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f2ef;
  flex-shrink: 0;
}

.basket-item-remove:active {
  background: #ece6e0;
}

.basket-item-remove-icon {
  font-size: 32rpx;
  color: #c0b8b0;
  line-height: 1;
}

.basket-item-remove:active .basket-item-remove-icon {
  color: #e85d5d;
}

/* 历史推荐 */
.history-section {
  margin: 24rpx 0;
  background: #fff;
  border-radius: 24rpx;
  border: 1rpx solid #F0EDE8;
  overflow: hidden;
}

.history-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 28rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #5a544f;
}

.history-subtitle {
  flex: 1;
  font-size: 24rpx;
  color: #a09a94;
}

.history-arrow {
  font-size: 22rpx;
  color: #c4bfb9;
  transition: transform 0.25s ease;
}

.history-arrow.is-up {
  transform: rotate(180deg);
}

.history-list {
  padding: 0 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: #FAF7F4;
  border-radius: 16rpx;
  border: 1rpx solid #E8E4E0;
  transition: all 0.2s ease;
}

.history-item:active {
  transform: scale(0.98);
}

.history-item.is-in-basket {
  background: rgba(232, 168, 124, 0.12);
  border-color: #E8A87C;
}

.history-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.history-item-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #2d2d2d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-item-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.history-item-day {
  font-size: 22rpx;
  color: #c4bfb9;
}

.history-item-freq {
  font-size: 20rpx;
  font-weight: 500;
  color: #E8A87C;
  padding: 2rpx 10rpx;
  background: rgba(232, 168, 124, 0.1);
  border-radius: 100rpx;
}

.history-item-action {
  font-size: 28rpx;
  font-weight: 600;
  color: #E8A87C;
  flex-shrink: 0;
  width: 40rpx;
  text-align: center;
}

.history-item.is-in-basket .history-item-action {
  color: #5a9e6f;
}

/* 底部操作 */
.basket-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 32rpx 0;
}

.basket-actions-empty {
  padding: 16rpx 0 32rpx;
}

.basket-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  border: none;
}

.basket-btn::after {
  border: none;
}

.basket-btn-primary {
  background: linear-gradient(135deg, #E8A87C 0%, #D4956A 100%);
  color: #fff;
  box-shadow: 0 12rpx 32rpx rgba(232, 168, 124, 0.35);
}

.basket-btn-primary:active {
  transform: scale(0.96);
}

.basket-btn-secondary {
  background: #FAF7F4;
  color: #5a544f;
  border: 2rpx solid #E8E4E0;
}

.basket-btn-secondary:active {
  background: rgba(232, 168, 124, 0.08);
  border-color: rgba(232, 168, 124, 0.3);
}

.basket-btn-danger {
  background: transparent;
  color: #c0b8b0;
  border: 2rpx solid #E8E4E0;
}

.basket-btn-danger:active {
  background: rgba(232, 93, 93, 0.06);
  color: #e85d5d;
  border-color: rgba(232, 93, 93, 0.3);
}
