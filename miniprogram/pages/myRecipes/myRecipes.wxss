.myrecipes-container {
  min-height: 100vh;
  background: #FDFCFA;
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-sizing: border-box;
}

.myrecipes-header {
  padding: 48rpx 0 32rpx;
  text-align: center;
}

.myrecipes-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2d2d2d;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.myrecipes-subtitle {
  display: block;
  font-size: 26rpx;
  color: #a09a94;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
}

.myrecipes-refresh-btn {
  font-size: 26rpx;
  color: #E8A87C;
  background: transparent;
  border: 1rpx solid #E8A87C;
  border-radius: 32rpx;
  padding: 12rpx 32rpx;
  line-height: 1.2;
}

.myrecipes-loading {
  padding: 80rpx 0;
  text-align: center;
}

.myrecipes-loading-text {
  font-size: 28rpx;
  color: #a09a94;
}

.myrecipes-empty {
  padding: 80rpx 32rpx;
  text-align: center;
}

.myrecipes-empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.myrecipes-empty-text {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #5a544f;
  margin-bottom: 12rpx;
}

.myrecipes-empty-hint {
  display: block;
  font-size: 26rpx;
  color: #a09a94;
  margin-bottom: 40rpx;
}

.myrecipes-empty-btn {
  width: 240rpx;
  margin: 0 auto;
  background: linear-gradient(135deg, #E8A87C 0%, #D4956A 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 100rpx;
  border: none;
}

.myrecipes-list-wrap {
  padding-bottom: 32rpx;
}

.myrecipes-refresh-tip {
  font-size: 24rpx;
  color: #a09a94;
  text-align: center;
  padding: 16rpx 0;
}

.myrecipes-list {
  padding-bottom: 32rpx;
}

.myrecipes-card {
  display: flex;
  align-items: stretch;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #F0EDE8;
}

.myrecipes-card-cover {
  width: 180rpx;
  min-height: 160rpx;
  background: #FAF7F4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.myrecipes-card-cover-placeholder {
  background: linear-gradient(135deg, rgba(232, 168, 124, 0.12) 0%, rgba(212, 149, 106, 0.08) 100%);
}

.myrecipes-cover-img {
  width: 100%;
  height: 100%;
  min-height: 160rpx;
}

.myrecipes-cover-emoji {
  font-size: 64rpx;
  opacity: 0.8;
}

.myrecipes-card-body {
  flex: 1;
  padding: 24rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.myrecipes-card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
  margin-bottom: 8rpx;
}

.myrecipes-card-meta {
  margin-bottom: 16rpx;
}

.myrecipes-card-source {
  font-size: 24rpx;
  color: #a09a94;
  margin-right: 12rpx;
}

.myrecipes-card-actions {
  display: flex;
  gap: 16rpx;
}

.myrecipes-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
  border: none;
  padding: 0;
}

.myrecipes-btn-primary {
  background: linear-gradient(135deg, #E8A87C 0%, #D4956A 100%);
  color: #fff;
}

.myrecipes-btn-secondary {
  background: #FAF7F4;
  color: #5a544f;
  border: 2rpx solid #E8E4E0;
}
