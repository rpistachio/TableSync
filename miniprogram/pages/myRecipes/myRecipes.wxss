/* 我的菜谱库 —— 导入历史，今天继续做 */

.myrecipes-container {
  min-height: 100vh;
  background: var(--bg);
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-sizing: border-box;
}

.myrecipes-header {
  padding: 48rpx 0 32rpx;
  text-align: center;
}

.myrecipes-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text);
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.myrecipes-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-subtle);
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
}

.myrecipes-refresh-btn {
  font-size: 26rpx;
  color: var(--accent);
  background: transparent;
  border: 1rpx solid var(--accent);
  border-radius: 32rpx;
  padding: 12rpx 32rpx;
  line-height: 1.2;
}

.myrecipes-loading {
  padding: 80rpx 0;
  text-align: center;
}

.myrecipes-loading-text {
  font-size: 28rpx;
  color: var(--text-subtle);
}

.myrecipes-empty {
  padding: 80rpx 32rpx;
  text-align: center;
}

.myrecipes-empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.myrecipes-empty-text {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-soft);
  margin-bottom: 12rpx;
}

.myrecipes-empty-hint {
  display: block;
  font-size: 26rpx;
  color: var(--text-subtle);
  margin-bottom: 40rpx;
}

.myrecipes-empty-btn {
  width: 240rpx;
  margin: 0 auto;
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent) 100%);
  color: var(--text-inverse);
  font-size: 28rpx;
  border-radius: 100rpx;
  border: none;
}

.myrecipes-list-wrap {
  padding-bottom: 32rpx;
}

.myrecipes-refresh-tip {
  font-size: 24rpx;
  color: var(--text-subtle);
  text-align: center;
  padding: 16rpx 0;
}

.myrecipes-list {
  padding-bottom: 32rpx;
}

.myrecipes-card {
  display: flex;
  align-items: stretch;
  margin-bottom: 24rpx;
  background: var(--card-bg-strong);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx var(--shadow);
  border: 1rpx solid var(--line);
}

.myrecipes-card-cover {
  width: 180rpx;
  min-height: 160rpx;
  background: var(--card-bg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.myrecipes-card-cover-placeholder {
  background: linear-gradient(135deg, rgba(232, 168, 124, 0.12) 0%, rgba(212, 149, 106, 0.08) 100%);
}

.myrecipes-cover-img {
  width: 100%;
  height: 100%;
  min-height: 160rpx;
}

.myrecipes-cover-emoji {
  font-size: 64rpx;
  opacity: 0.8;
}

.myrecipes-card-body {
  flex: 1;
  padding: 24rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.myrecipes-card-top-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.myrecipes-card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
  flex: 1;
  margin-right: 8rpx;
}

.myrecipes-delete-btn {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--bg-warm);
}

.myrecipes-delete-icon {
  font-size: 32rpx;
  color: var(--text-subtle);
  line-height: 1;
}

.myrecipes-delete-btn:active {
  background: var(--line);
}

.myrecipes-delete-btn:active .myrecipes-delete-icon {
  color: #e85d5d;
}

.myrecipes-card-meta {
  margin-bottom: 16rpx;
}

.myrecipes-card-source {
  font-size: 24rpx;
  color: var(--text-subtle);
  margin-right: 12rpx;
}

.myrecipes-card-actions {
  display: flex;
  gap: 16rpx;
}

.myrecipes-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
  border: none;
  padding: 0;
}

.myrecipes-btn-primary {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent) 100%);
  color: var(--text-inverse);
}

.myrecipes-btn-secondary {
  background: var(--card-bg);
  color: var(--text-soft);
  border: 2rpx solid var(--line-strong);
}

/* 心形按钮：加入灵感篮子 */
.myrecipes-heart-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--card-bg);
  border: 2rpx solid var(--line-strong);
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.myrecipes-heart-btn.is-active {
  background: var(--accent-soft);
  border-color: var(--accent);
}

.myrecipes-heart-btn:active {
  transform: scale(0.9);
}

.myrecipes-heart-icon {
  font-size: 32rpx;
  line-height: 1;
}

