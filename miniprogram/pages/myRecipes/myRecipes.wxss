/* pages/myRecipes/myRecipes.wxss - 视觉与首页一致 */

.myrecipes-container {
  min-height: 100vh;
  background: var(--bg);
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-sizing: border-box;
  color: var(--text);
}

/* ============ 头部：与首页 feature-entry / myrecipes-entry 一致 ============ */
.myrecipes-header-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin: 32rpx 0 28rpx;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.08) 0%, rgba(139, 119, 101, 0.03) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(139, 119, 101, 0.2);
}

.myrecipes-header-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(139, 119, 101, 0.15);
  border-radius: 20rpx;
  flex-shrink: 0;
}

.myrecipes-header-icon {
  font-size: 36rpx;
}

.myrecipes-header-text-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.myrecipes-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
  letter-spacing: 1rpx;
}

.myrecipes-subtitle {
  font-size: 22rpx;
  color: #a09a94;
}

.myrecipes-refresh-wrap {
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(139, 119, 101, 0.35);
  background: rgba(139, 119, 101, 0.08);
}

.myrecipes-refresh-wrap:active {
  background: rgba(139, 119, 101, 0.15);
}

.myrecipes-refresh-text {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-soft);
}

/* ============ Tab 栏 ============ */
.myrecipes-tabs {
  display: flex;
  gap: 0;
  margin-bottom: 24rpx;
  background: var(--card-bg-strong);
  border-radius: 32rpx;
  padding: 6rpx;
  border: 1rpx solid rgba(139, 119, 101, 0.2);
}

.myrecipes-tab {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 28rpx;
  transition: all 0.2s ease;
}

.myrecipes-tab.active {
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.12) 0%, rgba(139, 119, 101, 0.06) 100%);
  border: 1rpx solid rgba(139, 119, 101, 0.25);
}

.myrecipes-tab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-soft);
}

.myrecipes-tab.active .myrecipes-tab-text {
  color: var(--text);
  font-weight: 600;
}

/* ============ 做过的菜卡片 ============ */
.myrecipes-cooked-badges {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.myrecipes-feedback-emoji {
  font-size: 28rpx;
  line-height: 1;
}

.myrecipes-cook-count {
  font-size: 22rpx;
  color: var(--text-subtle);
}

.myrecipes-helper-tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  background: rgba(139, 119, 101, 0.15);
  color: var(--text-soft);
}

.myrecipes-note-preview {
  margin-bottom: 12rpx;
}

.myrecipes-note-text {
  font-size: 24rpx;
  color: var(--text-subtle);
  font-style: italic;
}

/* ============ 加载中 ============ */
.myrecipes-loading {
  padding: 80rpx 0;
  text-align: center;
}

.myrecipes-loading-text {
  font-size: 28rpx;
  color: var(--text-subtle);
}

/* ============ 空状态：与首页 history-hint-card / vibe 卡片风格一致 ============ */
.myrecipes-empty-card {
  margin-top: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.08) 0%, rgba(139, 119, 101, 0.04) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(139, 119, 101, 0.2);
}

.myrecipes-empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.7;
}

.myrecipes-empty-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-soft);
  margin-bottom: 12rpx;
}

.myrecipes-empty-hint {
  display: block;
  font-size: 24rpx;
  color: var(--text-subtle);
  margin-bottom: 36rpx;
}

.myrecipes-empty-btn {
  display: inline-block;
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-strong) 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 100rpx;
  border: 1rpx solid var(--accent-border-strong);
  box-shadow: 0 8rpx 24rpx rgba(232, 74, 39, 0.25);
}

.myrecipes-empty-btn:active {
  transform: scale(0.96);
}

/* ============ 列表 ============ */
.myrecipes-list-wrap {
  padding-bottom: 32rpx;
}

.myrecipes-refresh-tip {
  font-size: 24rpx;
  color: var(--text-subtle);
  text-align: center;
  padding: 16rpx 0;
}

.myrecipes-list {
  padding-bottom: 32rpx;
}

/* 菜谱卡片：与首页入口卡片同系渐变 + 圆角 */
.myrecipes-card {
  display: flex;
  align-items: stretch;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.06) 0%, rgba(139, 119, 101, 0.02) 100%);
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(139, 119, 101, 0.2);
  transition: all 0.2s ease;
}

.myrecipes-card:active {
  background: rgba(139, 119, 101, 0.1);
}

.myrecipes-card-cover {
  width: 180rpx;
  min-height: 160rpx;
  background: var(--card-bg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.myrecipes-card-cover-placeholder {
  background: linear-gradient(135deg, rgba(232, 168, 124, 0.12) 0%, rgba(212, 149, 106, 0.08) 100%);
}

.myrecipes-cover-img {
  width: 100%;
  height: 100%;
  min-height: 160rpx;
}

.myrecipes-cover-emoji {
  font-size: 64rpx;
  opacity: 0.8;
}

.myrecipes-card-body {
  flex: 1;
  padding: 24rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.myrecipes-card-top-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.myrecipes-card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
  flex: 1;
  margin-right: 8rpx;
}

.myrecipes-delete-btn {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.04);
}

.myrecipes-delete-icon {
  font-size: 32rpx;
  color: var(--text-subtle);
  line-height: 1;
}

.myrecipes-delete-btn:active {
  background: rgba(0, 0, 0, 0.08);
}

.myrecipes-delete-btn:active .myrecipes-delete-icon {
  color: #e85d5d;
}

.myrecipes-card-meta {
  margin-bottom: 16rpx;
}

.myrecipes-card-source {
  font-size: 24rpx;
  color: var(--text-subtle);
  margin-right: 12rpx;
}

.myrecipes-card-actions {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

/* 主按钮：与首页 zen-main-btn / premium-btn 一致 */
.myrecipes-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 32rpx;
  padding: 0;
  transition: all 0.2s ease;
}

.myrecipes-btn-primary {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-strong) 100%);
  color: #fff;
  border: 1rpx solid var(--accent-border-strong);
  box-shadow: 0 8rpx 24rpx rgba(232, 74, 39, 0.25);
}

.myrecipes-btn-primary:active {
  transform: scale(0.96);
}

.myrecipes-btn-secondary {
  background: var(--card-bg-strong);
  color: var(--text-soft);
  border: 2rpx solid var(--line-strong);
}

.myrecipes-btn-secondary:active {
  background: var(--line);
}

/* 心形按钮：与首页 pill/胶囊风格一致 */
.myrecipes-heart-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--card-bg-strong);
  border: 2rpx solid var(--line-strong);
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.myrecipes-heart-btn.is-active {
  background: var(--accent-soft);
  border-color: var(--accent);
}

.myrecipes-heart-btn:active {
  transform: scale(0.9);
}

.myrecipes-heart-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ============ 改评价底部面板 ============ */
.feedback-sheet-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.feedback-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 80vh;
  background: var(--bg);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
  transform: translateY(100%);
  transition: transform 0.25s ease;
}

.feedback-sheet.feedback-sheet-open {
  transform: translateY(0);
}

.feedback-sheet-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--line);
}

.feedback-sheet-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8rpx;
}

.feedback-sheet-recipe {
  display: block;
  font-size: 26rpx;
  color: var(--text-subtle);
}

.feedback-sheet-body {
  padding: 24rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.feedback-sheet-options {
  display: flex;
  gap: 24rpx;
  margin-bottom: 28rpx;
}

.feedback-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 12rpx;
  border-radius: 20rpx;
  border: 2rpx solid var(--line);
  background: var(--card-bg);
  transition: all 0.2s ease;
}

.feedback-option.active {
  border-color: var(--accent);
  background: rgba(232, 74, 39, 0.08);
}

.feedback-option-icon {
  font-size: 40rpx;
  line-height: 1;
}

.feedback-option-label {
  font-size: 24rpx;
  color: var(--text-soft);
}

.feedback-option.active .feedback-option-label {
  color: var(--accent);
  font-weight: 500;
}

.feedback-note-wrap {
  margin-bottom: 24rpx;
  position: relative;
}

.feedback-note-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx 48rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: var(--text);
  background: var(--card-bg);
  border: 2rpx solid var(--line);
  border-radius: 16rpx;
}

.feedback-note-count {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  color: var(--text-subtle);
}

.feedback-history-wrap {
  margin-top: 8rpx;
}

.feedback-history-title {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-subtle);
  margin-bottom: 12rpx;
}

.feedback-history-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(139, 119, 101, 0.1);
  font-size: 24rpx;
  color: var(--text-soft);
}

.feedback-history-emoji {
  font-size: 28rpx;
}

.feedback-history-date {
  flex-shrink: 0;
}

.feedback-history-note {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.feedback-sheet-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--line);
}

.feedback-sheet-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
}

.feedback-sheet-cancel {
  background: var(--card-bg-strong);
  color: var(--text-soft);
  border: 2rpx solid var(--line-strong);
}

.feedback-sheet-save {
  background: linear-gradient(135deg, var(--accent) 0%, var(--accent-strong) 100%);
  color: #fff;
  border: 1rpx solid var(--accent-border-strong);
}

.feedback-sheet-btn:active {
  opacity: 0.9;
}
