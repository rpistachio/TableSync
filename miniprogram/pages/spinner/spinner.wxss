.spinner-container {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #fdf8f2 0%, #f5ede3 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.center-logo {
  position: absolute;
  z-index: 10;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease;
  animation: logoExpandIn 0.5s ease forwards;
}

@keyframes logoExpandIn {
  0% {
    transform: scale(0.3);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.center-logo:active {
  transform: scale(0.95);
}

.center-logo.spinning {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.logo-image {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}

.start-hint {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #c1663e;
  font-weight: 600;
  white-space: nowrap;
}

.wheel-ring {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid rgba(193, 102, 62, 0.2);
  transition: transform 4s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.outer-ring {
  width: 640rpx;
  height: 640rpx;
  background: rgba(255, 255, 255, 0.5);
}

.middle-ring {
  width: 480rpx;
  height: 480rpx;
  background: rgba(255, 255, 255, 0.6);
}

.inner-ring {
  width: 320rpx;
  height: 320rpx;
  background: rgba(255, 255, 255, 0.7);
}

.inner-ring .wheel-sector {
  padding-top: 10rpx;
}

.inner-ring .sector-text {
  font-size: 18rpx;
  max-width: 88rpx;
  white-space: normal;
  line-height: 1.25;
  text-align: center;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.wheel-sector {
  position: absolute;
  width: 100%;
  height: 50%;
  top: 0;
  left: 0;
  transform-origin: center bottom;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 20rpx;
}

.sector-text {
  font-size: 22rpx;
  color: #5a544f;
  font-weight: 500;
  transform: rotate(0deg);
  white-space: nowrap;
}

.target-sector .sector-text {
  color: #c1663e;
  font-weight: 700;
}

.indicator-arrow {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 40rpx solid #c1663e;
  z-index: 5;
}
