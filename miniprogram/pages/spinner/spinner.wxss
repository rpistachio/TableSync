.spinner-page {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--bg) 0%, var(--bg-warm) 100%);
  padding-bottom: env(safe-area-inset-bottom);
}

.zen-loading {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.zen-loading-text {
  font-size: 28rpx;
  color: #8e857e;
}

.context-bar {
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  border-bottom: 1rpx solid var(--accent-border);
}

.context-text {
  font-size: 26rpx;
  color: var(--text-soft);
  line-height: 1.5;
}


/* ============ 灵感篮子优先策略 ============ */
.priority-section {
  margin: 0 24rpx 24rpx;
  padding: 24rpx 28rpx;
  background: var(--card-bg-strong);
  border-radius: 24rpx;
  border: 1rpx solid var(--accent-border-strong);
}

.priority-label {
  display: block;
  font-size: 22rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  color: var(--text-subtle);
  margin-bottom: 16rpx;
}

.priority-switches {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.priority-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid var(--line-strong);
  background: var(--card-bg);
  transition: all 0.2s ease;
}

.priority-item.is-active {
  background: var(--accent-soft);
  border-color: var(--accent);
}

.priority-item-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.priority-item-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-soft);
}

.priority-item.is-active .priority-item-text {
  color: var(--accent-strong);
}

.priority-count {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--accent);
  background: var(--accent-soft);
  padding: 4rpx 14rpx;
  border-radius: 100rpx;
  flex-shrink: 0;
}

/* Phase C：最近常做，一键加入灵感篮 */
.history-quick-bar {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8rpx 12rpx;
  margin: 0 24rpx 20rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.08) 0%, rgba(139, 119, 101, 0.04) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(139, 119, 101, 0.2);
  transition: all 0.2s ease;
}

.history-quick-bar:active {
  transform: scale(0.98);
  background: rgba(139, 119, 101, 0.12);
}

.history-quick-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #5a544f;
  flex-shrink: 0;
}

.history-quick-names {
  font-size: 24rpx;
  color: #2d2d2d;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-quick-cta {
  font-size: 22rpx;
  font-weight: 500;
  color: #E8A87C;
  flex-shrink: 0;
}

.history-quick-arrow {
  font-size: 28rpx;
  color: #c4bfb9;
  flex-shrink: 0;
  font-weight: 300;
}

.pref-section-wrap {
  margin: 0 24rpx 24rpx;
  background: #fff;
  border-radius: 24rpx;
  border: 1rpx solid #F0EDE8;
  overflow: hidden;
}

.pref-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
}

.pref-header-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #5a544f;
}

.pref-header-arrow {
  font-size: 24rpx;
  color: #8e857e;
  transition: transform 0.25s ease;
}

.pref-header-arrow.is-expanded {
  transform: rotate(180deg);
}

.pref-body {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.35s ease;
}

.pref-body.is-expanded {
  max-height: 1200rpx;
}

.selection-group {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #F0EDE8;
}

.selection-group.custom-taste-header {
  border-bottom: none;
}

.group-label {
  font-size: 22rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  color: #a09a94;
  margin-bottom: 20rpx;
  display: block;
}

.people-picker {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.people-item {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: transparent;
}

.people-icon {
  font-size: 36rpx;
  opacity: 0.3;
  filter: grayscale(100%);
}

.people-item.is-lit .people-icon {
  opacity: 1;
  filter: grayscale(0%);
}

.people-count-label {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #E8A87C;
  font-weight: 500;
}

.combo-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
}

.combo-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 14rpx 24rpx;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
  background: transparent;
}

.combo-btn.is-active {
  background: #E8A87C;
  border-color: #E8A87C;
}

.combo-text {
  font-size: 24rpx;
  color: #5a544f;
}

.combo-btn.is-active .combo-text {
  color: #fff;
}

.combo-tag {
  font-size: 18rpx;
  color: #a09a94;
}

.combo-btn.is-active .combo-tag {
  color: rgba(255, 255, 255, 0.85);
}

.nutrition-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 12rpx;
}

.nutrition-tip-icon {
  font-size: 24rpx;
}

.nutrition-tip-text {
  font-size: 22rpx;
  color: #8e857e;
}

.capsule-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 20rpx 32rpx;
}

.capsule-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 20rpx;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
  background: #FAF7F4;
}

.capsule-item.is-expanded {
  background: #fff;
  border-color: #E8A87C;
}

.capsule-item.has-value {
  border-color: rgba(232, 168, 124, 0.5);
  background: rgba(232, 168, 124, 0.06);
}

.capsule-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #5a544f;
}

.capsule-arrow {
  font-size: 18rpx;
  color: #8e857e;
  transition: transform 0.25s ease;
}

.capsule-arrow.is-up {
  transform: rotate(180deg);
}

.dropdown-panel {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.dropdown-panel.is-open {
  max-height: 500rpx;
}

.dropdown-inner {
  padding: 16rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #F0EDE8;
}

.soup-option-row {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.soup-option-btn {
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #8e857e;
  background: #FAF7F4;
  border: 1rpx solid #E8E4E0;
}

.soup-option-btn.is-active {
  background: #E8A87C;
  color: #fff;
  border-color: #E8A87C;
}

.baby-age-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.baby-age-card {
  flex: 1;
  min-width: calc(33.33% - 11rpx);
  padding: 20rpx 16rpx;
  background: #FAF7F4;
  border-radius: 20rpx;
  border: 1rpx solid #E8E4E0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.baby-age-card.is-active {
  background: #E8A87C;
  border-color: #E8A87C;
}

.baby-age-card-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #5a544f;
}

.baby-age-card.is-active .baby-age-card-label {
  color: #fff;
}

.baby-age-card-sub {
  font-size: 20rpx;
  color: #8e857e;
}

.baby-age-card.is-active .baby-age-card-sub {
  color: rgba(255, 255, 255, 0.9);
}

.baby-none-btn {
  display: block;
  text-align: center;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #8e857e;
  background: #FAF7F4;
  border: 1rpx solid #E8E4E0;
}

.baby-none-btn.is-active {
  background: #E8A87C;
  color: #fff;
  border-color: #E8A87C;
}

.pref-tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.pref-tag {
  padding: 12rpx 24rpx;
  background: transparent;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
  font-size: 24rpx;
  color: #5a544f;
}

.pref-tag.is-selected {
  background: #FAF7F4;
  border: 2rpx solid #E8A87C;
  color: #E8A87C;
}

.cta-wrap {
  padding: 0 32rpx 32rpx;
}

.cta-wrap .premium-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #E8A87C 0%, #D4956A 100%);
  color: #fff;
  border-radius: 100rpx;
  font-weight: 500;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  border: none;
}

.cta-wrap .premium-btn:active {
  transform: scale(0.98);
}

.spinner-container {
  min-height: 520rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.spinner-container.has-wheel {
  min-height: 640rpx;
}

.wheel-placeholder {
  padding: 80rpx 40rpx;
  text-align: center;
}

.wheel-placeholder-text {
  font-size: 26rpx;
  color: #a09a94;
}

.center-logo {
  position: absolute;
  z-index: 10;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease;
}

.center-logo:active {
  transform: scale(0.95);
}

.center-logo.spinning {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.logo-image {
  width: 88rpx;
  height: 88rpx;
  flex-shrink: 0;
}

.start-hint {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: #c1663e;
  font-weight: 600;
}

.wheel-ring {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid rgba(193, 102, 62, 0.2);
  transition: transform 4s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.outer-ring {
  width: 560rpx;
  height: 560rpx;
  background: rgba(255, 255, 255, 0.5);
}

.middle-ring {
  width: 420rpx;
  height: 420rpx;
  background: rgba(255, 255, 255, 0.6);
}

.inner-ring {
  width: 280rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.7);
}

.inner-ring .wheel-sector {
  padding-top: 8rpx;
}

.inner-ring .sector-text {
  font-size: 16rpx;
  max-width: 72rpx;
  white-space: normal;
  line-height: 1.25;
  text-align: center;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.wheel-sector {
  position: absolute;
  width: 100%;
  height: 50%;
  top: 0;
  left: 0;
  transform-origin: center bottom;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 16rpx;
}

.sector-text {
  font-size: 20rpx;
  color: #5a544f;
  font-weight: 500;
  transform: rotate(0deg);
  white-space: nowrap;
}

.target-sector .sector-text {
  color: #c1663e;
  font-weight: 700;
}

.indicator-arrow {
  position: absolute;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-top: 32rpx solid #c1663e;
  z-index: 5;
}
