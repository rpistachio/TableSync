.menu-container {
  min-height: 100vh;
  background-color: var(--bg);
  padding: 32rpx 48rpx 240rpx;
}

.page-header {
  margin-bottom: 48rpx;
}

.curation-tag {
  font-size: 20rpx;
  letter-spacing: 4rpx;
  color: var(--accent-strong);
  font-weight: 700;
}

.main-title {
  display: block;
  font-size: 52rpx;
  color: var(--text);
  margin: 16rpx 0 8rpx;
}

.sub-title {
  font-size: 26rpx;
  color: var(--text-muted);
}

.menu-content {
  margin-bottom: 48rpx;
}

.plan-card {
  background: var(--card-bg-strong);
  border-radius: 48rpx;
  padding: 56rpx 48rpx;
  box-shadow: 0 20rpx 60rpx var(--shadow);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.role-badge {
  font-size: 18rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.role-badge.adult {
  background: #e8f0e9;
  color: #4a5d4e;
}

.role-badge.baby {
  background: #feeff0;
  color: #d67a7d;
}

.dish-name {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text);
  margin: 0 0 16rpx;
}

.ingredient-preview {
  font-size: 24rpx;
  color: var(--text-subtle);
}

/* 小程序不支持 text + text::before，用间距代替伪元素分隔符 */
.ingredient-preview text {
  margin-right: 8rpx;
}

.card-divider {
  margin: 48rpx 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.card-divider .line {
  flex: 1;
  height: 2rpx;
  background: var(--line);
}

.card-divider .dot {
  width: 8rpx;
  height: 8rpx;
  background: var(--text-subtle);
  border-radius: 50%;
}

.time-hint {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 32rpx;
  text-align: center;
  display: block;
}

.action-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 48rpx 48rpx;
  background: linear-gradient(to top, var(--bg) 85%, transparent);
}

.button-group {
  display: flex;
  gap: 24rpx;
  align-items: stretch;
}

.primary-btn {
  flex: 2;
  height: 108rpx;
  background: var(--text);
  color: var(--text-inverse);
  border-radius: 24rpx;
  font-weight: 600;
  border: none;
  line-height: 108rpx;
  font-size: 32rpx;
}

.secondary-btn {
  flex: 1;
  height: 108rpx;
  background: var(--card-bg-strong);
  border: 2rpx solid var(--line);
  border-radius: 24rpx;
  color: var(--text-soft);
  font-weight: 500;
  line-height: 108rpx;
  font-size: 28rpx;
}
