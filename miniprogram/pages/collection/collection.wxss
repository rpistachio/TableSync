/* ============ 烟火集 · Zen Mode 手账视觉 (Phase 1) ============ */

.collection-page {
  /* 手账配色变量（页面级，不污染全局） */
  --paper: #F9F8F4;
  --ink: #3A3D40;
  --wood: #A69482;
  --seal: #9E3E32;
  --dust: rgba(0, 0, 0, 0.05);

  min-height: 100vh;
  padding: 56rpx 40rpx 100rpx;
  box-sizing: border-box;

  /* 纸张肌理：霜白底色 + 微弱颗粒感（径向渐变叠加模拟细纹棉纸） */
  background-color: var(--paper);
  background-image:
    radial-gradient(circle at 20% 30%, rgba(0, 0, 0, 0.012) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(0, 0, 0, 0.008) 0%, transparent 45%),
    radial-gradient(circle at 50% 50%, rgba(0, 0, 0, 0.006) 0%, transparent 60%);
  background-size: 120rpx 120rpx, 160rpx 160rpx, 100rpx 100rpx;
  background-repeat: repeat;
}

/* ============ 标题区 ============ */

.collection-header {
  text-align: center;
  margin-bottom: 56rpx;
}

.collection-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: var(--ink);
  margin-bottom: 16rpx;
  font-family: "STKaiti", "KaiTi", "楷体", serif;
  letter-spacing: 12rpx;
  text-shadow: 0 1rpx 2rpx rgba(58, 61, 64, 0.08);
}

.collection-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.collection-divider-line {
  width: 80rpx;
  height: 2rpx;
  background: var(--wood);
  opacity: 0.5;
}

.collection-divider-dot {
  font-size: 20rpx;
  color: var(--wood);
  opacity: 0.7;
}

.collection-desc {
  display: block;
  font-size: 24rpx;
  color: var(--wood);
  letter-spacing: 2rpx;
}

.collection-progress {
  display: block;
  margin-top: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--seal);
  letter-spacing: 4rpx;
}

/* ============ 散落式网格（留白率 35%+） ============ */

.collection-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 40rpx 32rpx;
  justify-content: center;
  align-items: flex-start;
}

/* ============ 贴纸卡片 · 手账化 ============ */

.sticker-cell {
  width: calc(50% - 16rpx);
  max-width: 300rpx;
  padding: 28rpx 20rpx;
  border-radius: 6rpx;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-sizing: border-box;
}

/* 未获得：虚线边框 + 极淡灰底 */
.sticker-cell:not(.is-earned) {
  background: rgba(246, 245, 243, 0.9);
  border: 2rpx dashed rgba(166, 148, 130, 0.35);
}

/* 已获得：和纸质感 + 烟尘投影 */
.sticker-cell.is-earned {
  background: linear-gradient(165deg, rgba(252, 250, 247, 0.98) 0%, rgba(248, 246, 242, 0.95) 100%);
  border: 1rpx solid rgba(166, 148, 130, 0.2);
  box-shadow: 0 4rpx 12rpx var(--dust), 0 2rpx 6rpx var(--dust);
}

/* 胶带装饰（已获得卡片） */
.sticker-cell.is-earned.tape-left::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 24rpx;
  width: 72rpx;
  height: 24rpx;
  background: rgba(166, 148, 130, 0.3);
  transform: rotate(-4deg);
  border-radius: 2rpx;
}

.sticker-cell.is-earned.tape-right::after {
  content: '';
  position: absolute;
  top: -6rpx;
  right: 24rpx;
  width: 72rpx;
  height: 24rpx;
  background: rgba(166, 148, 130, 0.3);
  transform: rotate(4deg);
  border-radius: 2rpx;
}

.sticker-cell-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14rpx;
}

/* ============ 火漆印章容器 ============ */

.sticker-seal-wrap {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 已获得：火漆印章（茜红径向渐变 + 厚度感） */
.sticker-cell.is-earned .sticker-seal-wrap {
  background: radial-gradient(circle at 35% 30%, #B84A3A 0%, var(--seal) 40%, #7E2A20 100%);
  box-shadow:
    0 2rpx 6rpx rgba(158, 62, 50, 0.4),
    0 4rpx 12rpx rgba(0, 0, 0, 0.12),
    inset 0 1rpx 2rpx rgba(255, 200, 180, 0.2),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.15);
}

/* 未获得：空心圆 + 虚线 */
.sticker-cell:not(.is-earned) .sticker-seal-wrap {
  background: transparent;
  border: 2rpx dashed rgba(166, 148, 130, 0.4);
}

.sticker-cell-img {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.sticker-cell-emoji {
  font-size: 40rpx;
  line-height: 1;
}

.sticker-cell:not(.is-earned) .sticker-cell-emoji {
  opacity: 0.4;
}

.sticker-cell:not(.is-earned) .sticker-cell-img {
  opacity: 0.5;
}

.sticker-cell-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--ink);
}

.sticker-cell:not(.is-earned) .sticker-cell-name {
  color: var(--wood);
  opacity: 0.85;
}

.sticker-cell-desc {
  font-size: 20rpx;
  color: var(--wood);
  text-align: center;
  line-height: 1.45;
  opacity: 0.9;
}

.sticker-cell-count {
  font-size: 18rpx;
  font-weight: 600;
  color: var(--seal);
  background: rgba(158, 62, 50, 0.08);
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
}
