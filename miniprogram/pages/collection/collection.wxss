.collection-page {
  min-height: 100vh;
  background: var(--bg);
  padding: 48rpx 32rpx 80rpx;
}

.collection-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.collection-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 12rpx;
}

.collection-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-muted);
}

.collection-progress {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #c1663e;
  letter-spacing: 2rpx;
}

.collection-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  justify-content: center;
}

.sticker-cell {
  width: calc(50% - 12rpx);
  max-width: 320rpx;
  padding: 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.sticker-cell.is-earned {
  background: linear-gradient(135deg, rgba(253, 248, 236, 0.9) 0%, rgba(250, 242, 220, 0.8) 100%);
  border-color: rgba(193, 102, 62, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(193, 102, 62, 0.08);
}

.sticker-cell-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.sticker-cell-emoji {
  font-size: 56rpx;
}

.sticker-cell:not(.is-earned) .sticker-cell-emoji {
  opacity: 0.35;
}

.sticker-cell-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.sticker-cell:not(.is-earned) .sticker-cell-name {
  color: var(--text-muted);
}

.sticker-cell-desc {
  font-size: 22rpx;
  color: var(--text-muted);
  text-align: center;
  line-height: 1.4;
}

.sticker-cell-count {
  font-size: 20rpx;
  font-weight: 600;
  color: #c1663e;
  background: rgba(193, 102, 62, 0.08);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
