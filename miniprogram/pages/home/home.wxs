/**
 * 检查数组是否包含某个值
 * @param {Array} arr - 数组
 * @param {*} val - 要查找的值
 * @returns {boolean}
 */
function includes(arr, val) {
  if (!arr || !arr.length) return false;
  for (var i = 0; i < arr.length; i++) {
    if (arr[i] === val) return true;
  }
  return false;
}

module.exports = {
  includes: includes
};
