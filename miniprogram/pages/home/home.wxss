  flex-direction: row;
  gap: 20rpx;
  justify-content: center;
}

.status-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 14rpx;
  padding: 32rpx 20rpx;
  background: rgba(255, 255, 255, 0.7);
