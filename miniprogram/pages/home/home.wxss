.home-container {
  min-height: 100%;
  height: 100%;
  background-color: #fdf8f2;
  padding: 3vw 3vw 180rpx;
  color: #2d2d2d;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.brand-header {
  margin-bottom: 6vw;
  padding: 0 40rpx 0 40rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
}

.date-badge {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: rgba(193, 102, 62, 0.1);
  color: #c1663e;
  font-size: 22rpx;
  border-radius: 40rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  align-self: flex-start;
}

.main-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #2d2d2d;
  letter-spacing: -1rpx;
  margin-bottom: 8rpx;
}

.sub-quote {
  font-size: 12px;
  color: #999;
  margin-top: 4rpx;
}

.group-label {
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
  color: #4a4540;
  margin-bottom: 32rpx;
  display: block;
}

/* Pill Segmented Control 药丸式分段 */
.member-pills-container {
  padding: 24rpx 40rpx 20rpx;
  background: transparent;
}

.pills-track {
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 100rpx;
  padding: 8rpx;
}

.pill-item {
  flex: 1;
  padding: 20rpx 32rpx;
  text-align: center;
  background: transparent;
  border-radius: 100rpx;
  transition: all 0.25s ease;
}

.pill-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #969799;
}

.pill-item.is-active {
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.pill-item.is-active .pill-text {
  color: #1C1C1E;
}

.pill-divider {
  width: 2rpx;
  height: 28rpx;
  background: rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.baby-age-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
}

.baby-age-tag-label {
  opacity: 0.85;
}

.baby-age-tag-value {
  font-weight: 500;
  opacity: 0.9;
}

.baby-age-section .group-label {
  margin-bottom: 24rpx;
}

.baby-age-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.baby-age-card {
  flex: 1;
  min-width: calc(33.33% - 14rpx);
  padding: 28rpx 20rpx;
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #efe9e2;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.baby-age-card.is-active {
  background: #c1663e;
  border-color: #c1663e;
  box-shadow: 0 8rpx 24rpx rgba(193, 102, 62, 0.2);
}

.baby-age-card-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #5a544f;
}

.baby-age-card.is-active .baby-age-card-label {
  color: #fff;
}

.baby-age-card-sub {
  font-size: 22rpx;
  color: #8e857e;
}

.baby-age-card.is-active .baby-age-card-sub {
  color: rgba(255, 255, 255, 0.9);
}

.adult-count-section {
  padding: 24rpx 40rpx 20rpx;
}

.adult-count-section .group-label {
  margin-bottom: 24rpx;
}

.count-stack .curated-card {
  width: calc((100% - 120rpx) / 6);
  min-width: 72rpx;
  padding: 24rpx 8rpx;
}

.count-stack .card-text {
  font-size: 24rpx;
}

.has-baby-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 40rpx 28rpx;
}

.has-baby-label {
  font-size: 26rpx;
  color: #4a4540;
  font-weight: 500;
}

.combo-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 32rpx;
}
.combo-btn {
  padding: 24rpx 32rpx;
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #efe9e2;
}
.combo-btn.is-active {
  background: #c1663e;
  border-color: #c1663e;
  box-shadow: 0 8rpx 24rpx rgba(193, 102, 62, 0.2);
}
.combo-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}
.combo-btn.is-active .combo-text {
  color: #fff;
}

.card-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.curated-card {
  width: calc(33.33% - 16rpx);
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #efe9e2;
}

.curated-card.is-active {
  background: #c1663e;
  border-color: #c1663e;
  box-shadow: 0 16rpx 32rpx rgba(193, 102, 62, 0.2);
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.card-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}

.curated-card.is-active .card-text {
  color: #fff;
}

/* 大人菜品预览区 */
.preview-area .preview-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  border: 2rpx solid #efe9e2;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.preview-adult {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.preview-baby {
  font-size: 26rpx;
  color: #c1663e;
  font-weight: 500;
}

/* TableSync 品牌露出 */
.home-brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 32rpx;
  opacity: 0.6;
}

.brand-line {
  width: 40rpx;
  height: 2rpx;
  background: #b2aba4;
  margin-bottom: 16rpx;
}

.brand-text {
  font-family: "Helvetica Neue", sans-serif;
  font-weight: 300;
  letter-spacing: 8rpx;
  text-transform: uppercase;
  font-size: 28rpx;
  color: #b2aba4;
}

/* Premium UI：底部 Banner，内容居中，safe-area 不挤压 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(20rpx);
}

.prime-action-btn {
  width: 100%;
  height: 96rpx;
  background: #1C1C1E;
  color: #fff;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 30rpx;
  letter-spacing: 2.4rpx;
  border: none;
  line-height: 96rpx;
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.prime-action-btn:active {
  transform: scale(0.96);
}

.premium-btn {
  width: 100%;
  height: 96rpx;
  background: #1C1C1E;
  color: #fff;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 30rpx;
  letter-spacing: 2.4rpx;
  border: none;
  line-height: 96rpx;
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.premium-btn:active {
  transform: scale(0.96);
}

/* 菜单预览弹层 */
.menu-preview-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}
.menu-preview-card {
  width: 100%;
  max-width: 640rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 36rpx 32rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
}
.menu-preview-header {
  margin-bottom: 24rpx;
}
.menu-preview-title {
  display: block;
  font-size: 24rpx;
  color: #8e857e;
  margin-bottom: 8rpx;
}
.menu-preview-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.menu-preview-combo {
  display: block;
  font-size: 24rpx;
  color: #c1663e;
  margin-top: 12rpx;
  font-weight: 500;
}
.menu-preview-balance {
  display: block;
  font-size: 22rpx;
  color: #8e857e;
  margin-top: 8rpx;
}
.menu-preview-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #4a4540;
  margin-bottom: 20rpx;
}
.menu-preview-list {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 32rpx;
}
.menu-preview-row {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 24rpx;
  background: #fdf8f2;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}
.menu-preview-row:last-child {
  margin-bottom: 0;
}
.menu-row-check-wrap {
  flex-shrink: 0;
  margin-right: 20rpx;
  padding: 12rpx;
  min-width: 56rpx;
  min-height: 56rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.menu-row-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #c1663e;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  background: transparent;
}
.menu-row-checkbox.checked {
  background: #c1663e;
}
.menu-row-content {
  flex: 1;
  min-width: 0;
}
.menu-row-main {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.menu-row-adult {
  color: #2d2d2d;
  font-weight: 600;
}
.menu-row-plus {
  color: #b2aba4;
  margin: 0 6rpx;
  font-weight: 500;
}
.menu-row-baby {
  color: #c1663e;
  font-weight: 500;
}
.menu-row-shared-hint {
  display: block;
  font-size: 22rpx;
  color: #8e857e;
  margin-top: 8rpx;
  padding-left: 0;
}
.menu-preview-row.has-baby-hint .menu-row-shared-hint {
  margin-top: 10rpx;
}
.menu-preview-actions {
  display: flex;
  gap: 24rpx;
}
.menu-preview-actions .btn-shuffle,
.menu-preview-actions .btn-replace {
  flex: 1;
  min-width: 0;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #5a544f;
  background: #f0ebe5;
  border: none;
  border-radius: 24rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
}
.menu-preview-actions .btn-replace {
  white-space: nowrap;
  min-width: 180rpx;
}
.menu-preview-actions .btn-shuffle::after,
.menu-preview-actions .btn-replace::after {
  border: none;
}
.menu-preview-actions .btn-confirm {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  background: #c1663e;
  border: none;
  border-radius: 24rpx;
}
.menu-preview-actions .btn-confirm::after {
  border: none;
}
.menu-preview-actions .btn-shuffle:active,
.menu-preview-actions .btn-confirm:active {
  opacity: 0.9;
}
