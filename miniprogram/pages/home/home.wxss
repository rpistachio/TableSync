  max-height: 50vh;
  border-radius: 24rpx;
}

.zen-status-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 36rpx;
  padding: 28rpx 24rpx;
  background: rgba(27, 61, 47, 0.04);
  border-radius: 24rpx;
  position: relative;
}

.zen-status-label {
