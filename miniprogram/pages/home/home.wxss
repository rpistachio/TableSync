.home-container {
  min-height: 100%;
  height: 100%;
  background-color: #FDFCFA;
  padding: 0 32rpx 180rpx;
  color: #2d2d2d;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.brand-header {
  padding: 60rpx 40rpx 48rpx;
  text-align: center;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.brand-logo {
  width: 200rpx;
  margin-bottom: 16rpx;
  opacity: 0.95;
}

.brand-logo.zoom-out {
  animation: logoZoomOut 0.5s ease forwards;
}

@keyframes logoZoomOut {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(3); opacity: 0; }
}

.brand-slogan {
  font-size: 24rpx;
  font-weight: 300;
  letter-spacing: 4rpx;
  color: #a09a94;
}

/* ============ 今日氛围卡片 ============ */
.vibe-card {
  margin: 0 0 24rpx;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, rgba(232, 168, 124, 0.1) 0%, rgba(212, 149, 106, 0.05) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(232, 168, 124, 0.25);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.vibe-date {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}

.vibe-weather {
  font-size: 24rpx;
  color: #8e857e;
}

.vibe-greeting {
  font-size: 28rpx;
  font-weight: 500;
  color: #2d2d2d;
  text-align: center;
  line-height: 1.4;
}

.selection-group {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #F0EDE8;
}

.selection-group:last-of-type {
  border-bottom: none;
}

.custom-taste-header {
  border-bottom: none;
}

.group-label {
  font-size: 22rpx;
  font-weight: 500;
  letter-spacing: 6rpx;
  color: #a09a94;
  text-transform: uppercase;
  margin-bottom: 28rpx;
  display: block;
  text-align: center;
}

.people-picker {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.people-item {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: transparent;
  transition: all 0.2s ease;
}

.people-icon {
  font-size: 40rpx;
  opacity: 0.3;
  filter: grayscale(100%);
  transition: all 0.2s ease;
}

.people-item.is-lit .people-icon {
  opacity: 1;
  filter: grayscale(0%);
}

.people-count-label {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #E8A87C;
  font-weight: 500;
}

/* Pill Segmented Control 药丸式分段 */
.member-pills-container {
  padding: 24rpx 40rpx 20rpx;
  background: transparent;
}

.pills-track {
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 100rpx;
  padding: 8rpx;
}

.pill-item {
  flex: 1;
  padding: 20rpx 32rpx;
  text-align: center;
  background: transparent;
  border-radius: 100rpx;
  transition: all 0.25s ease;
}

.pill-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #969799;
}

.pill-item.is-active {
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.pill-item.is-active .pill-text {
  color: #1C1C1E;
}

.pill-divider {
  width: 2rpx;
  height: 28rpx;
  background: rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.baby-age-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
}

.baby-age-tag-label {
  opacity: 0.85;
}

.baby-age-tag-value {
  font-weight: 500;
  opacity: 0.9;
}

.baby-age-section {
  border-bottom: none;
}

.baby-age-section .group-label {
  margin-bottom: 24rpx;
}

.baby-age-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.baby-age-card {
  flex: 1;
  min-width: calc(33.33% - 14rpx);
  padding: 28rpx 20rpx;
  background: #FAF7F4;
  border-radius: 24rpx;
  border: 1rpx solid #E8E4E0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.baby-age-card.is-active {
  background: #E8A87C;
  border-color: #E8A87C;
  box-shadow: 0 8rpx 24rpx rgba(232, 168, 124, 0.35);
}

.baby-age-card-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #5a544f;
}

.baby-age-card.is-active .baby-age-card-label {
  color: #fff;
}

.baby-age-card-sub {
  font-size: 22rpx;
  color: #8e857e;
}

.baby-age-card.is-active .baby-age-card-sub {
  color: rgba(255, 255, 255, 0.9);
}

/* 产品差异点：宝宝餐时展示 */
.baby-diff-tag {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 16rpx;
  border-left: 4rpx solid #E8A87C;
  margin-top: 8rpx;
}
.baby-diff-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}
.baby-diff-text {
  font-size: 24rpx;
  color: #8e857e;
  line-height: 1.45;
}

.baby-none-btn {
  display: block;
  text-align: center;
  padding: 16rpx 32rpx;
  margin-top: 16rpx;
  border-radius: 100rpx;
  font-size: 26rpx;
  color: #8e857e;
  background: #FAF7F4;
  border: 1rpx solid #E8E4E0;
  transition: all 0.2s ease;
}

.baby-none-btn.is-active {
  background: #E8A87C;
  color: #fff;
  border-color: #E8A87C;
  box-shadow: 0 4rpx 16rpx rgba(232, 168, 124, 0.3);
}

.adult-count-section {
  padding: 24rpx 40rpx 20rpx;
}

.adult-count-section .group-label {
  margin-bottom: 24rpx;
}

.count-stack .curated-card {
  width: calc((100% - 120rpx) / 6);
  min-width: 72rpx;
  padding: 24rpx 8rpx;
}

.count-stack .card-text {
  font-size: 24rpx;
}

.nutrition-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 12rpx;
  border: 1rpx solid rgba(232, 168, 124, 0.2);
}

.nutrition-tip-icon {
  font-size: 28rpx;
}

.nutrition-tip-text {
  font-size: 24rpx;
  color: #8e857e;
  line-height: 1.4;
}

/* ============ 横向胶囊快捷栏 ============ */
.capsule-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
  padding: 28rpx 0;
}

.capsule-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
  background: #FAF7F4;
  box-shadow: inset 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s ease;
}

.capsule-item.is-expanded {
  background: #fff;
  border-color: #E8A87C;
  box-shadow: 0 4rpx 16rpx rgba(232, 168, 124, 0.2);
}

.capsule-item.has-value {
  border-color: rgba(232, 168, 124, 0.5);
  background: rgba(232, 168, 124, 0.06);
}

.capsule-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.capsule-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}

.capsule-item.is-expanded .capsule-text,
.capsule-item.has-value .capsule-text {
  color: #2d2d2d;
}

.capsule-arrow {
  font-size: 20rpx;
  color: #8e857e;
  transition: transform 0.25s ease;
}

.capsule-arrow.is-up {
  transform: rotate(180deg);
}

/* 下拉面板：手风琴展开 */
.dropdown-panel {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.dropdown-panel.is-open {
  max-height: 600rpx;
}

.dropdown-inner,
.dropdown-panel-inner {
  padding: 24rpx 0 28rpx;
  border-bottom: 1rpx solid #F0EDE8;
}

/* 下拉内复用：汤品三选一按钮 */
.soup-type-row {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  flex-wrap: wrap;
}

.soup-type-btn {
  padding: 16rpx 40rpx;
  border-radius: 100rpx;
  font-size: 26rpx;
  color: #8e857e;
  background: #FAF7F4;
  box-shadow: inset 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.soup-type-btn.is-active {
  background: #E8A87C;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(232, 168, 124, 0.3);
}

/* 汤品下拉内三选一按钮（与 soup-type-btn 一致） */
.soup-option-row {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  flex-wrap: wrap;
}

.soup-option-btn {
  padding: 16rpx 40rpx;
  border-radius: 100rpx;
  font-size: 26rpx;
  color: #8e857e;
  background: #FAF7F4;
  border: 1rpx solid #E8E4E0;
  box-shadow: inset 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.soup-option-btn.is-active {
  background: #E8A87C;
  color: #fff;
  border-color: #E8A87C;
  box-shadow: 0 4rpx 16rpx rgba(232, 168, 124, 0.3);
}

.combo-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
  margin-bottom: 0;
}
.combo-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 18rpx 32rpx;
  background: transparent;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
  transition: all 0.25s ease;
}
.combo-btn.is-active {
  background: #E8A87C;
  border-color: #E8A87C;
  box-shadow: none;
}
.combo-text {
  font-size: 26rpx;
  font-weight: 400;
  color: #5a544f;
}
.combo-btn.is-active .combo-text {
  color: #fff;
}
.combo-tag {
  font-size: 18rpx;
  color: #a09a94;
  line-height: 1.2;
}
.combo-btn.is-active .combo-tag {
  color: rgba(255, 255, 255, 0.85);
}

.card-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.curated-card {
  width: calc(33.33% - 16rpx);
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #efe9e2;
}

.curated-card.is-active {
  background: #c1663e;
  border-color: #c1663e;
  box-shadow: 0 16rpx 32rpx rgba(193, 102, 62, 0.2);
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.card-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}

.curated-card.is-active .card-text {
  color: #fff;
}

/* 大人菜品预览区 */
.preview-area .preview-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  border: 2rpx solid #efe9e2;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.preview-adult {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.preview-baby {
  font-size: 26rpx;
  color: #c1663e;
  font-weight: 500;
}

/* ============ 拍照清冰箱入口 ============ */
.fridge-scan-entry {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin: 32rpx 0 0;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, rgba(232, 168, 124, 0.08) 0%, rgba(212, 149, 106, 0.04) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(232, 168, 124, 0.2);
  transition: all 0.2s ease;
}

.fridge-scan-entry:active {
  transform: scale(0.98);
  background: rgba(232, 168, 124, 0.12);
}

.fridge-scan-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(232, 168, 124, 0.15);
  border-radius: 20rpx;
  flex-shrink: 0;
}

.fridge-scan-icon {
  font-size: 36rpx;
}

.fridge-scan-text-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.fridge-scan-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d2d2d;
  letter-spacing: 1rpx;
}

.fridge-scan-desc {
  font-size: 22rpx;
  color: #a09a94;
}

.fridge-scan-arrow {
  font-size: 36rpx;
  color: #c4bfb9;
  flex-shrink: 0;
  font-weight: 300;
}

/* ============ 导入赛博菜谱入口 ============ */
.import-entry {
  margin-top: 20rpx;
  background: linear-gradient(135deg, rgba(107, 143, 181, 0.08) 0%, rgba(107, 143, 181, 0.03) 100%);
  border: 1rpx solid rgba(107, 143, 181, 0.2);
}

.import-entry:active {
  background: rgba(107, 143, 181, 0.12);
}

.import-icon-wrap {
  background: rgba(107, 143, 181, 0.15);
}

.mix-entry {
  margin-top: 20rpx;
  background: linear-gradient(135deg, rgba(168, 132, 107, 0.08) 0%, rgba(168, 132, 107, 0.03) 100%);
  border: 1rpx solid rgba(168, 132, 107, 0.2);
}

.mix-entry:active {
  background: rgba(168, 132, 107, 0.12);
}

.mix-icon-wrap {
  background: rgba(168, 132, 107, 0.15);
}

.myrecipes-entry {
  margin-top: 20rpx;
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.08) 0%, rgba(139, 119, 101, 0.03) 100%);
  border: 1rpx solid rgba(139, 119, 101, 0.2);
}

.myrecipes-entry:active {
  background: rgba(139, 119, 101, 0.12);
}

.myrecipes-icon-wrap {
  background: rgba(139, 119, 101, 0.15);
}

/* ============ 灵感篮子角标 ============ */
.basket-badge {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  border-radius: 100rpx;
  background: #c1663e;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(193, 102, 62, 0.4);
}

.basket-badge-num {
  font-size: 22rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1;
}

/* ============ 灵感篮子预览条 ============ */
.basket-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin: 24rpx 0 0;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(193, 102, 62, 0.1) 0%, rgba(232, 168, 124, 0.06) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(193, 102, 62, 0.2);
  transition: all 0.2s ease;
}

.basket-bar:active {
  transform: scale(0.98);
  background: rgba(193, 102, 62, 0.15);
}

.basket-bar-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.basket-bar-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
  color: #5a544f;
}

.basket-bar-arrow {
  font-size: 32rpx;
  color: #c4bfb9;
  flex-shrink: 0;
  font-weight: 300;
}

/* Phase C：历史推荐「再来一次？」卡片 */
.history-hint-card {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8rpx 16rpx;
  margin: 24rpx 0 0;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(139, 119, 101, 0.08) 0%, rgba(139, 119, 101, 0.04) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(139, 119, 101, 0.2);
  transition: all 0.2s ease;
}

.history-hint-card:active {
  transform: scale(0.98);
  background: rgba(139, 119, 101, 0.12);
}

.history-hint-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #5a544f;
  flex-shrink: 0;
}

.history-hint-dishes {
  font-size: 26rpx;
  color: #2d2d2d;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-hint-cta {
  font-size: 22rpx;
  color: #8e857e;
  flex-shrink: 0;
}

.history-hint-arrow {
  font-size: 28rpx;
  color: #c4bfb9;
  flex-shrink: 0;
  font-weight: 300;
}

/* TableSync 品牌露出 */
.home-brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 32rpx;
  opacity: 0.6;
}

.brand-line {
  width: 40rpx;
  height: 2rpx;
  background: #b2aba4;
  margin-bottom: 16rpx;
}

.brand-text {
  font-family: "Helvetica Neue", sans-serif;
  font-weight: 300;
  letter-spacing: 8rpx;
  text-transform: uppercase;
  font-size: 28rpx;
  color: #b2aba4;
}

/* Premium UI：底部 Banner，内容居中，safe-area 不挤压 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(20rpx);
}

.prime-action-btn {
  width: 100%;
  height: 96rpx;
  background: #1C1C1E;
  color: #fff;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 30rpx;
  letter-spacing: 2.4rpx;
  border: none;
  line-height: 96rpx;
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.prime-action-btn:active {
  transform: scale(0.96);
}

.premium-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #E8A87C 0%, #D4956A 100%);
  color: #fff;
  border-radius: 100rpx;
  font-weight: 500;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(232, 168, 124, 0.35);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.premium-btn:active {
  transform: scale(0.96);
}

/* ============ 个性化偏好面板 ============ */
.pref-panel {
  margin: 0 0 32rpx;
  background: transparent;
  border-radius: 24rpx;
  border: 1rpx solid #F0EDE8;
  overflow: hidden;
}

.pref-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  background: transparent;
}

.pref-header-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #5a544f;
}

.pref-header-arrow {
  font-size: 24rpx;
  color: #8e857e;
  transition: transform 0.25s ease;
}

.pref-header-arrow.is-expanded {
  transform: rotate(180deg);
}

.pref-body {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, padding 0.3s ease;
  padding: 0 32rpx;
}

.pref-body.is-expanded {
  max-height: 800rpx;
  padding: 0 32rpx 28rpx;
}

.pref-section {
  margin-bottom: 28rpx;
}

.pref-section:last-child {
  margin-bottom: 0;
}

.pref-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #5a544f;
  margin-bottom: 16rpx;
}

.pref-tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.pref-tag {
  padding: 14rpx 28rpx;
  background: transparent;
  border-radius: 100rpx;
  border: 1rpx solid #E8E4E0;
  font-size: 26rpx;
  color: #5a544f;
  transition: all 0.2s ease;
}

.pref-tag.is-selected {
  background: #FAF7F4;
  border: 2rpx solid #E8A87C;
  color: #E8A87C;
}

.pref-switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 0;
}

.pref-switch-row .pref-label {
  margin-bottom: 0;
}

.pref-hint {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: rgba(232, 168, 124, 0.08);
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.pref-hint-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.pref-hint-text {
  font-size: 24rpx;
  color: #8e857e;
  line-height: 1.4;
}

/* ============ 按钮转场动画 ============ */
.premium-btn.shrinking {
  animation: btnShrink 0.4s ease forwards;
}

@keyframes btnShrink {
  0% {
    width: 100%;
    height: 100rpx;
    border-radius: 100rpx;
    opacity: 1;
  }
  100% {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    opacity: 0;
  }
}

.btn-text.fade-out {
  animation: textFade 0.15s ease forwards;
}

@keyframes textFade {
  0% { opacity: 1; }
  100% { opacity: 0; }
}

.flying-dot {
  position: fixed;
  bottom: calc(50rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #E8A87C 0%, #D4956A 100%);
  border-radius: 50%;
  z-index: 9999;
  box-shadow: 0 8rpx 24rpx rgba(232, 168, 124, 0.5);
}

.flying-dot.fly-to-center {
  animation: flyToCenter 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes flyToCenter {
  0% {
    bottom: calc(50rpx + env(safe-area-inset-bottom));
    width: 48rpx;
    height: 48rpx;
  }
  100% {
    bottom: 50vh;
    transform: translateX(-50%) translateY(50%);
    width: 48rpx;
    height: 48rpx;
  }
}

