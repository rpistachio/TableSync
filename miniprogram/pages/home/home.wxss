  border-color: var(--ink-green);
  box-shadow: 0 4rpx 16rpx rgba(27, 61, 47, 0.12);
}

.status-card.is-active.is-ok .status-card-label {
  color: var(--ink-green);
  font-weight: 600;
}

.status-card.is-active.is-tired {
  background: var(--mustard);
  border-color: var(--mustard);
  box-shadow: 0 4rpx 16rpx rgba(217, 166, 46, 0.25);
}

.status-card.is-active.is-tired .status-card-label {
  color: #fff;
  font-weight: 600;
}

.status-card-icon {
  width: 110rpx;
  height: 110rpx;
}

.status-card-icon-placeholder {
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
}

.status-card-label {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-soft);
}

.zen-main-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: 70%;
  align-self: center;
  padding: 40rpx 48rpx;
  background: #E84A27;
  border: none;
  border-radius: 32rpx 28rpx 34rpx 30rpx;
  box-shadow: 0 12rpx 32rpx rgba(232, 74, 39, 0.3);
  animation: btnBreath 3s ease-in-out infinite;
  transition: transform 0.2s ease;
  position: relative;
  overflow: visible;
}

.zen-main-btn:active {
  animation-play-state: paused;
  transform: scale(0.97);
}

@keyframes btnBreath {
  0%, 100% { transform: scale(1); box-shadow: 0 12rpx 32rpx rgba(232, 74, 39, 0.25); }
  50% { transform: scale(1.02); box-shadow: 0 16rpx 40rpx rgba(232, 74, 39, 0.4); }
}

.zen-sticker {
  position: absolute;
  width: 88rpx;
  z-index: 3;
  pointer-events: none;
  opacity: 0;
  --sticker-rot: 0deg;
  animation: stickerIn 0.8s ease-out forwards, stickerFloat 3.6s ease-in-out 0.9s infinite;
}

.zen-sticker-avocado {
  top: -26rpx;
  right: -22rpx;
  --sticker-rot: 6deg;
  animation-delay: 0.08s;
}

.zen-sticker-leaf {
  bottom: -18rpx;
  left: -12rpx;
  width: 80rpx;
  --sticker-rot: -8deg;
  animation-delay: 0.18s;
}

@keyframes stickerIn {
  0% {
    opacity: 0;
    transform: translateY(8rpx) scale(0.5) rotate(var(--sticker-rot));
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1) rotate(var(--sticker-rot));
  }
}

@keyframes stickerFloat {
  0% { transform: translateY(0) scale(1) rotate(var(--sticker-rot)); }
  50% { transform: translateY(2rpx) scale(1) rotate(var(--sticker-rot)); }
  100% { transform: translateY(0) scale(1) rotate(var(--sticker-rot)); }
}

.zen-main-btn-text {
  font-size: 34rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  position: relative;
  z-index: 2;
}

.zen-advanced-link {
  color: var(--text-muted);
  font-size: 24rpx;
  text-align: center;
  padding: 32rpx 0 16rpx;
  letter-spacing: 1rpx;
}

.zen-advanced-back {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  margin: 6rpx 0 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e8e4e0;
  background: rgba(255, 255, 255, 0.6);
  color: #6f6a64;
  font-size: 24rpx;
}

.zen-advanced-back-icon {
  font-size: 26rpx;
}

.zen-advanced-back-text {
  font-weight: 500;
}

/* ============ 烟火集：底部居中横向书签入口 ============ */
.collection-spine {
  position: fixed;
  left: 50%;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  z-index: 80;
  width: auto;
  padding: 16rpx 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 14rpx;

  background: linear-gradient(135deg, #2A6B4A 0%, #1B3D2F 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(27, 61, 47, 0.35);

  animation: spineSlideIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  animation-delay: 0.6s;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

@keyframes spineSlideIn {
  0% { transform: translateX(-50%) translateY(60rpx); opacity: 0; }
  100% { transform: translateX(-50%) translateY(0); opacity: 1; }
}

.collection-spine:active {
  transform: translateX(-50%) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(27, 61, 47, 0.4);
}

/* -- 火漆印章 -- */
.spine-seal {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 40% 38%, #C43E2A 20%, #9B2318 70%, #6E1810 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow:
    0 2rpx 6rpx rgba(139, 32, 32, 0.4),
    inset 0 1rpx 2rpx rgba(255, 200, 180, 0.25);
  flex-shrink: 0;
}

.spine-seal-icon {
  font-size: 18rpx;
  line-height: 1;
  filter: brightness(1.1);
}

/* -- 微光呼吸：未查看的新烹饪记录 -- */
.spine-glow-layer {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 200, 100, 0.6) 0%, rgba(255, 180, 80, 0.2) 50%, transparent 72%);
  animation: sealGlow 3s ease-in-out infinite;
  pointer-events: none;
}

@keyframes sealGlow {
  0%, 100% { opacity: 0.25; transform: scale(1); }
  50% { opacity: 0.85; transform: scale(1.2); }
}

.spine-text {
  writing-mode: horizontal-tb;
  font-size: 28rpx;
  color: rgba(255, 248, 240, 0.9);
  letter-spacing: 4rpx;
  font-weight: 500;
}

/* ---- 时段模式：统一墨绿书签，仅深夜疲惫保留小油灯微光 ---- */
.collection-spine.spine-day,
.collection-spine.spine-morning,
.collection-spine.spine-night {
  background: linear-gradient(135deg, #2A6B4A 0%, #1B3D2F 100%);
}

.collection-spine.spine-night-tired {
  background: linear-gradient(135deg, #1f3529 0%, #15271e 100%);
  box-shadow:
    0 8rpx 24rpx rgba(27, 61, 47, 0.4),
    0 0 24rpx rgba(232, 168, 124, 0.12);
}

.spine-night-tired .spine-seal {
  background: radial-gradient(circle at 45% 35%, #F0C87C 10%, #E8A44C 35%, #C07830 65%, #8B5520 100%);
  box-shadow:
    0 0 16rpx rgba(232, 168, 100, 0.5),
    0 0 32rpx rgba(232, 168, 100, 0.2),
    inset 0 1rpx 2rpx rgba(255, 240, 200, 0.35);
  animation: lampFlicker 4s ease-in-out infinite;
}

@keyframes lampFlicker {
  0%, 100% { box-shadow: 0 0 16rpx rgba(232, 168, 100, 0.45), 0 0 28rpx rgba(232, 168, 100, 0.15); }
  30% { box-shadow: 0 0 20rpx rgba(232, 168, 100, 0.6), 0 0 36rpx rgba(232, 168, 100, 0.25); }
  60% { box-shadow: 0 0 14rpx rgba(232, 168, 100, 0.4), 0 0 24rpx rgba(232, 168, 100, 0.12); }
  80% { box-shadow: 0 0 18rpx rgba(232, 168, 100, 0.55), 0 0 32rpx rgba(232, 168, 100, 0.2); }
}

.spine-night-tired .spine-seal-icon {
  filter: brightness(1.3) saturate(0.9);
}

.spine-night-tired .spine-text {
  color: rgba(255, 230, 190, 0.5);
}

/* ---- 贴纸收下后：火漆印章短暂高亮 ---- */
.collection-spine.spine-highlight .spine-seal {
  animation: sealPulse 1.2s ease-out;
}

@keyframes sealPulse {
  0% { box-shadow: 0 0 0 0 rgba(232, 168, 100, 0.6); transform: scale(1); }
  40% { box-shadow: 0 0 24rpx 8rpx rgba(232, 168, 100, 0.4); transform: scale(1.15); }
  100% { box-shadow: 0 2rpx 6rpx rgba(139, 32, 32, 0.4); transform: scale(1); }
}

